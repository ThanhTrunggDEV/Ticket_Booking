@model Ticket_Booking.Models.DomainModels.Ticket
@using Ticket_Booking.Enums

@{
    ViewData["Title"] = @Localizer["PNR.BookingDetails"];
    Layout = "_Layout";
    var departureTime = Model.Trip.DepartureTime;
    var arrivalTime = departureTime.AddMinutes(Model.Trip.EstimatedDuration);
    var durationHours = Model.Trip.EstimatedDuration / 60;
    var durationMinutes = Model.Trip.EstimatedDuration % 60;
    var durationString = $"{durationHours}h {durationMinutes}m";
}

<div class="min-h-screen bg-zinc-100 py-12 px-4 sm:px-6 lg:px-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-10 left-10 w-24 h-24 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>

    <div class="w-full max-w-5xl mx-auto relative z-10">
        <!-- Success Message -->
        <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-lg">
            <div class="flex items-center">
                <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                    <h3 class="text-lg font-bold text-green-800 uppercase tracking-wider">@Localizer["PNR.BookingFound"]</h3>
                    <p class="text-sm text-green-700">@Localizer["PNR.BookingDetails"]</p>
                </div>
            </div>
        </div>

        <!-- Ticket Card -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col lg:flex-row relative transform transition-transform duration-500 hover:rotate-1 hover:scale-[1.01]">
            
            <!-- Left Section: Main Ticket Info -->
            <div class="flex-1 p-8 lg:p-10 relative z-10">
                <!-- Background Pattern -->
                <div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 bg-indigo-50 rounded-full blur-3xl opacity-50 pointer-events-none"></div>
                
                <!-- Header -->
                <div class="flex justify-between items-center mb-10 relative">
                    <div class="flex items-center gap-4">
                        <!-- Airline Logo Placeholder -->
                        <div class="w-14 h-14 bg-indigo-600 rounded-2xl flex items-center justify-center text-white shadow-indigo-200 shadow-lg transform rotate-3">
                            <span class="font-black text-xl">@Model.Trip.Company.Name.Substring(0, 1)</span>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-slate-800 tracking-tight">@Model.Trip.Company.Name</h1>
                            <div class="flex items-center text-sm text-slate-500 font-medium mt-0.5 flex-wrap gap-2">
                                <span class="bg-green-100 text-green-700 px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wider">@Localizer["PNR.Confirmed"]</span>
                                @if (!string.IsNullOrEmpty(Model.PNR))
                                {
                                    <span class="bg-indigo-100 text-indigo-700 px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wider font-mono">
                                        PNR: @Model.PNR
                                    </span>
                                }
                                <span>Booking ID: #@Model.Id.ToString("D6")</span>
                            </div>
                        </div>
                    </div>
                    <div class="text-right hidden sm:block">
                        <div class="text-sm text-slate-400 font-bold uppercase tracking-widest mb-1">@Localizer["PNR.Class"]</div>
                        <div class="text-lg font-black text-indigo-600">@Model.SeatClass</div>
                    </div>
                </div>

                <!-- Flight Route Visualization -->
                <div class="flex items-center justify-between mb-12 relative">
                    <!-- From -->
                    <div class="text-left z-10">
                        <div class="text-5xl font-black text-slate-800 tracking-tighter">@Model.Trip.FromCity.Substring(0, 3).ToUpper()</div>
                        <div class="text-sm font-bold text-slate-400 uppercase tracking-wider mt-2">@Model.Trip.FromCity</div>
                        <div class="inline-block mt-2 px-3 py-1 bg-slate-100 rounded-full text-xs font-bold text-slate-600">
                            @departureTime.ToString("HH:mm")
                        </div>
                    </div>

                    <!-- Path -->
                    <div class="flex-1 px-8 flex flex-col items-center relative">
                        <div class="text-xs font-bold text-indigo-400 mb-4 uppercase tracking-widest">@durationString</div>
                        <div class="w-full h-0.5 bg-slate-200 relative flex items-center">
                            <div class="absolute w-2 h-2 bg-indigo-500 rounded-full left-0 ring-4 ring-white"></div>
                            <div class="absolute w-2 h-2 bg-slate-300 rounded-full right-0"></div>
                            <!-- Plane Icon -->
                            <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white p-2">
                                <svg class="w-6 h-6 text-indigo-500 transform rotate-90" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                            </div>
                        </div>
                        <div class="mt-4 text-xs text-slate-400 font-medium">@Localizer["PNR.DirectFlight"]</div>
                    </div>

                    <!-- To -->
                    <div class="text-right z-10">
                        <div class="text-5xl font-black text-slate-800 tracking-tighter">@Model.Trip.ToCity.Substring(0, 3).ToUpper()</div>
                        <div class="text-sm font-bold text-slate-400 uppercase tracking-wider mt-2">@Model.Trip.ToCity</div>
                        <div class="inline-block mt-2 px-3 py-1 bg-slate-100 rounded-full text-xs font-bold text-slate-600">
                            @arrivalTime.ToString("HH:mm")
                        </div>
                    </div>
                </div>

                <!-- Info Grid -->
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 pt-8 border-t border-dashed border-slate-200">
                    <div>
                        <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-2">@Localizer["PNR.Date"]</div>
                        <div class="text-lg font-bold text-slate-800">@departureTime.ToString("dd MMM")</div>
                        <div class="text-xs text-slate-500">@departureTime.ToString("yyyy")</div>
                    </div>
                    <div>
                        <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-2">@Localizer["PNR.Flight"]</div>
                        <div class="text-lg font-bold text-slate-800">@Model.Trip.PlaneName</div>
                        <div class="text-xs text-slate-500">Boeing 787</div>
                    </div>
                    <div>
                        <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-2">@Localizer["PNR.Gate"]</div>
                        <div class="text-lg font-bold text-slate-800">A04</div>
                        <div class="text-xs text-slate-500">Terminal 2</div>
                    </div>
                    <div>
                        <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-2">@Localizer["PNR.Seat"]</div>
                        <div class="text-lg font-bold text-indigo-600">@Model.SeatNumber</div>
                        <div class="text-xs text-slate-500">Window</div>
                    </div>
                </div>

                <!-- Passenger -->
                <div class="mt-8 pt-8 border-t border-dashed border-slate-200 flex items-center">
                    <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 mr-4">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                    </div>
                    <div>
                        <div class="text-xs text-slate-400 font-bold uppercase tracking-widest">@Localizer["PNR.Passenger"]</div>
                        <div class="text-base font-bold text-slate-800">@Model.User.FullName</div>
                        <div class="text-xs text-slate-500">@Model.User.Email</div>
                    </div>
                </div>
            </div>

            <!-- Divider (The "Tear" Line) -->
            <div class="relative hidden lg:flex flex-col items-center justify-center w-12 bg-slate-50">
                <div class="absolute top-0 bottom-0 left-1/2 border-l-2 border-dashed border-slate-300 transform -translate-x-1/2"></div>
                <!-- Cutout Circles -->
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-zinc-100 rounded-full"></div>
                <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-6 h-6 bg-zinc-100 rounded-full"></div>
            </div>

            <!-- Right Section: Boarding Pass Stub -->
            <div class="lg:w-80 bg-slate-50 p-8 flex flex-col relative border-t-2 border-dashed border-slate-200 lg:border-none">
                <!-- Mobile Cutouts -->
                <div class="lg:hidden absolute -top-3 -left-3 w-6 h-6 bg-zinc-100 rounded-full"></div>
                <div class="lg:hidden absolute -top-3 -right-3 w-6 h-6 bg-zinc-100 rounded-full"></div>

                <div class="flex-1">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-lg font-bold text-slate-800 uppercase tracking-wider">@Localizer["PNR.BoardingPass"]</h3>
                        <svg class="w-6 h-6 text-indigo-500" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                    </div>

                    <div class="space-y-6">
                        <!-- PNR Display -->
                        <div class="bg-indigo-50 border-2 border-indigo-200 p-4 rounded-xl">
                            <div class="text-xs font-bold text-indigo-600 uppercase tracking-widest mb-1">@Localizer["PNR.PNRCode"]</div>
                            <div class="text-2xl font-black text-indigo-700 font-mono tracking-widest">@Model.PNR</div>
                        </div>

                        <div class="bg-white p-4 rounded-xl shadow-sm border border-slate-100">
                            <div class="flex justify-between mb-2">
                                <span class="text-xs font-bold text-slate-400 uppercase">From</span>
                                <span class="text-xs font-bold text-slate-800">@Model.Trip.FromCity.Substring(0, 3).ToUpper()</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-xs font-bold text-slate-400 uppercase">To</span>
                                <span class="text-xs font-bold text-slate-800">@Model.Trip.ToCity.Substring(0, 3).ToUpper()</span>
                            </div>
                        </div>

                        <div class="flex justify-between items-end">
                            <div>
                                <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-1">@Localizer["PNR.Boarding"]</div>
                                <div class="text-xl font-black text-indigo-600">@departureTime.AddMinutes(-45).ToString("HH:mm")</div>
                            </div>
                            <div class="text-right">
                                <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-1">@Localizer["PNR.Gate"]</div>
                                <div class="text-xl font-black text-slate-800">A04</div>
                            </div>
                        </div>
                        
                        <div class="text-center pt-4">
                            <div class="text-xs text-slate-400 font-bold uppercase tracking-widest mb-1">@Localizer["PNR.SeatNumber"]</div>
                            <div class="text-4xl font-black text-slate-800">@Model.SeatNumber</div>
                        </div>
                    </div>
                </div>

                <!-- QR Code Area -->
                <div class="mt-8 pt-8 border-t border-dashed border-slate-200 flex flex-col items-center">
                    <div class="bg-white p-2 rounded-xl shadow-sm mb-3">
                        @if (!string.IsNullOrEmpty(Model.QrCode))
                        {
                            <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=@Model.QrCode" alt="QR Code" class="w-32 h-32 object-contain opacity-90" />
                        }
                        else
                        {
                            <div class="w-32 h-32 bg-slate-100 flex items-center justify-center text-slate-400 text-xs font-bold">
                                NO QR CODE
                            </div>
                        }
                    </div>
                    <div class="text-[10px] font-mono text-slate-400 uppercase tracking-widest">@Localizer["PNR.ScanAtGate"]</div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
            <a href="@Url.Action("Lookup", "PNR")" class="inline-flex items-center justify-center px-6 py-3 bg-white text-slate-700 rounded-xl font-medium hover:bg-slate-50 transition-all border-2 border-slate-200 uppercase tracking-wider text-xs">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                @Localizer["PNR.LookupAnother"]
            </a>
            <button onclick="window.print()" class="inline-flex items-center justify-center px-6 py-3 bg-indigo-600 text-white rounded-xl font-medium hover:bg-indigo-700 transition-all uppercase tracking-wider text-xs">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
                </svg>
                @Localizer["PNR.PrintTicket"]
            </button>
        </div>
    </div>
</div>

<style>
    @@media print {
        body {
            background: white;
            -webkit-print-color-adjust: exact;
        }
        .min-h-screen {
            padding: 0;
            display: block;
        }
        button, a {
            display: none !important;
        }
        .shadow-2xl {
            box-shadow: none;
            border: 1px solid #ddd;
        }
        .bg-zinc-100 {
            background: none;
        }
    }
</style>
