@model Ticket_Booking.Models.DomainModels.Ticket
@using Ticket_Booking.Enums

@{
    ViewData["Title"] = "Your Ticket";
    Layout = "_Layout";
    var departureTime = Model.Trip.DepartureTime;
    var boardingTime = departureTime.AddMinutes(-45);
    var arrivalTime = departureTime.AddMinutes(Model.Trip.EstimatedDuration);
}

<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8 font-sans">
    <div class="max-w-4xl mx-auto">
        <!-- Back Button -->
        <div class="mb-8">
            <a href="@Url.Action("MyBooking", "User")" class="inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to My Bookings
            </a>
        </div>

        <!-- Ticket Container -->
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden flex flex-col md:flex-row w-full">
            
            <!-- Main Ticket Section (Left) -->
            <div class="flex-1 p-8 relative border-b-2 md:border-b-0 md:border-r-2 border-dashed border-gray-200">
                <!-- Decorative Circles for "Tear" effect -->
                <div class="absolute -bottom-3 -left-3 md:top-1/2 md:-right-3 md:-mt-3 w-6 h-6 bg-gray-100 rounded-full z-10"></div>
                <div class="absolute -bottom-3 -right-3 md:top-1/2 md:-left-3 md:-mt-3 w-6 h-6 bg-gray-100 rounded-full z-10"></div>

                <!-- Header -->
                <div class="flex justify-between items-start mb-8">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">@Model.Trip.Company.Name</h2>
                            <span class="text-sm text-gray-500 font-medium">Boarding Pass</span>
                        </div>
                    </div>
                    <div class="text-right">
                        <span class="inline-block px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-xs font-bold uppercase tracking-wider">
                            @Model.SeatClass Class
                        </span>
                    </div>
                </div>

                <!-- Route -->
                <div class="flex justify-between items-center mb-10">
                    <div class="text-left">
                        <div class="text-4xl font-black text-gray-900">@Model.Trip.FromCity.Substring(0, 3).ToUpper()</div>
                        <div class="text-sm text-gray-500 font-medium mt-1">@Model.Trip.FromCity</div>
                        <div class="text-xs text-gray-400 mt-1">@departureTime.ToString("HH:mm")</div>
                    </div>

                    <div class="flex-1 px-8 flex flex-col items-center">
                        <div class="text-xs font-bold text-gray-400 mb-2">@Model.Trip.EstimatedDuration min</div>
                        <div class="w-full h-px bg-gray-300 relative flex items-center justify-center">
                            <div class="absolute w-2 h-2 bg-gray-300 rounded-full left-0"></div>
                            <svg class="w-6 h-6 text-indigo-500 bg-white px-1" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z" />
                            </svg>
                            <div class="absolute w-2 h-2 bg-gray-300 rounded-full right-0"></div>
                        </div>
                    </div>

                    <div class="text-right">
                        <div class="text-4xl font-black text-gray-900">@Model.Trip.ToCity.Substring(0, 3).ToUpper()</div>
                        <div class="text-sm text-gray-500 font-medium mt-1">@Model.Trip.ToCity</div>
                        <div class="text-xs text-gray-400 mt-1">@arrivalTime.ToString("HH:mm")</div>
                    </div>
                </div>

                <!-- Details Grid -->
                <div class="grid grid-cols-3 gap-6 pt-6 border-t border-gray-100">
                    <div>
                        <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">Passenger</div>
                        <div class="text-sm font-bold text-gray-900 truncate">@Model.User.FullName</div>
                    </div>
                    <div>
                        <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">Date</div>
                        <div class="text-sm font-bold text-gray-900">@departureTime.ToString("dd MMM yyyy")</div>
                    </div>
                    <div>
                        <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">Flight No.</div>
                        <div class="text-sm font-bold text-gray-900">@Model.Trip.PlaneName</div>
                    </div>
                </div>
            </div>

            <!-- Stub Section (Right) -->
            <div class="w-full md:w-80 bg-gray-50 p-8 flex flex-col justify-between relative">
                <!-- Decorative Circles for "Tear" effect (Matching the left side) -->
                <div class="hidden md:block absolute top-1/2 -left-3 -mt-3 w-6 h-6 bg-gray-100 rounded-full z-10"></div>

                <div>
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-lg font-bold text-gray-900">Boarding Pass</h3>
                    </div>

                    <div class="space-y-6">
                        <div class="flex justify-between items-end">
                            <div>
                                <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">Boarding Time</div>
                                <div class="text-xl font-black text-indigo-600">@boardingTime.ToString("HH:mm")</div>
                            </div>
                            <div>
                                <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1 text-right">Gate</div>
                                <div class="text-xl font-black text-gray-900">A12</div>
                            </div>
                        </div>

                        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100">
                            <div class="text-center">
                                <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">Seat</div>
                                <div class="text-3xl font-black text-gray-900">@Model.SeatNumber</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-8 flex flex-col items-center">
                    <!-- QR Code Placeholder -->
                    <div class="bg-white p-2 rounded-lg shadow-sm mb-4">
                        @if (!string.IsNullOrEmpty(Model.QrCode))
                        {
                            <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=@Model.QrCode" alt="QR Code" class="w-32 h-32 object-contain" />
                        }
                        else
                        {
                            <!-- Fallback QR Pattern -->
                            <div class="w-32 h-32 bg-gray-900 flex items-center justify-center text-white text-xs text-center p-2">
                                QR Code
                            </div>
                        }
                    </div>
                    <div class="text-xs text-gray-400 text-center">
                        Scan at gate
                        <div class="mt-1 font-mono text-[10px]">TICKET ID: @Model.Id.ToString("D8")</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Footer Actions -->
        <div class="mt-8 text-center">
            <button onclick="window.print()" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all transform hover:scale-105">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                </svg>
                Print Ticket
            </button>
        </div>
    </div>
</div>

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        .max-w-4xl, .max-w-4xl * {
            visibility: visible;
        }
        .max-w-4xl {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            margin: 0;
            padding: 0;
        }
        button {
            display: none !important;
        }
    }
</style>
