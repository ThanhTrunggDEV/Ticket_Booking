@model Ticket_Booking.Models.ViewModels.SearchTripViewModel

@{
    ViewData["Title"] = "Find Flights";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 font-mono relative overflow-hidden">
    <!-- Hero Section with Search -->
    <div class="relative bg-indigo-900 text-white overflow-hidden">
        <div class="absolute inset-0 opacity-20 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>

        <div class="max-w-7xl mx-auto px-4 py-16 relative z-10">
            <div class="text-center mb-10">
                <h1 class="text-4xl md:text-6xl font-black tracking-tighter mb-4">
                    @Localizer["User.WhereToNext"]
                </h1>
                <p class="text-indigo-200 text-sm md:text-base uppercase tracking-widest font-bold">
                    @Localizer["User.DiscoverAdventure"]
                </p>
            </div>

            <!-- Search Box -->
            <div class="bg-white rounded-3xl shadow-2xl p-8 max-w-6xl mx-auto transform translate-y-8">
                <form asp-action="Index" method="get">
                    <!-- Trip Type Selection -->
                    <div class="mb-8 pb-6 border-b border-gray-100">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-3">@Localizer["User.TripType"]</label>
                        <div class="flex gap-3">
                            <label class="flex items-center gap-3 p-3 px-5 bg-indigo-50 border-2 border-indigo-200 rounded-xl cursor-pointer flex-1 hover:bg-indigo-100 transition-all duration-200 group" id="oneWayLabel">
                                <input type="radio" name="tripType" value="OneWay" @(Model.TripType == "OneWay" ? "checked" : "") class="w-5 h-5 text-indigo-600 cursor-pointer" onchange="toggleReturnDate()" />
                                <span class="text-sm font-bold text-gray-900">@Localizer["User.OneWay"]</span>
                            </label>
                            <label class="flex items-center gap-3 p-3 px-5 bg-gray-50 border-2 border-gray-200 rounded-xl cursor-pointer flex-1 hover:border-indigo-300 transition-all duration-200 group" id="roundTripLabel">
                                <input type="radio" name="tripType" value="RoundTrip" @(Model.TripType == "RoundTrip" ? "checked" : "") class="w-5 h-5 text-indigo-600 cursor-pointer" onchange="toggleReturnDate()" />
                                <span class="text-sm font-bold text-gray-900">@Localizer["User.RoundTrip"]</span>
                            </label>
                        </div>
                    </div>

                    <!-- Main Search Fields -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
                        <!-- From -->
                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">@Localizer["User.From"]</label>
                            <div class="relative">
                                <select name="fromCity" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-3 font-semibold focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 appearance-none hover:border-indigo-300 transition-colors">
                                    <option value="">@Localizer["User.SelectOrigin"]</option>
                                    @foreach (var city in Model.AvailableCities)
                                    {
                                        <option value="@city" selected="@(Model.FromCity == city)">@city</option>
                                    }
                                </select>
                                <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-gray-400">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                                </div>
                            </div>
                        </div>

                        <!-- To -->
                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">@Localizer["User.To"]</label>
                            <div class="relative">
                                <select name="toCity" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-3 font-semibold focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 appearance-none hover:border-indigo-300 transition-colors">
                                    <option value="">@Localizer["User.SelectDestination"]</option>
                                    @foreach (var city in Model.AvailableCities)
                                    {
                                        <option value="@city" selected="@(Model.ToCity == city)">@city</option>
                                    }
                                </select>
                                <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-gray-400">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                                </div>
                            </div>
                        </div>

                        <!-- Departure Date -->
                        <div>
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">@Localizer["User.Departure"]</label>
                            <input type="date" name="date" value="@(Model.Date?.ToString("yyyy-MM-dd"))" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-3 font-semibold focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 hover:border-indigo-300 transition-colors" />
                        </div>

                        <!-- Return Date (Hidden by default for One-Way) -->
                        <div id="returnDateContainer" style="display: @(Model.TripType == "RoundTrip" ? "block" : "none");" class="transition-all duration-300">
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">@Localizer["User.ReturnDate"]</label>
                            <input type="date" name="returnDate" value="@(Model.ReturnDate?.ToString("yyyy-MM-dd"))" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-3 font-semibold focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 hover:border-indigo-300 transition-colors" />
                        </div>

                        <!-- Search Button -->
                        <div class="flex items-end">
                            <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-indigo-700 text-white py-3.5 rounded-xl font-bold uppercase tracking-widest text-xs hover:shadow-lg hover:shadow-indigo-500/40 transition-all duration-200 transform hover:-translate-y-0.5 flex items-center justify-center gap-2 group">
                                <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                                @Localizer["User.Search"]
                            </button>
                        </div>
                    </div>

                    <!-- Filter & Sort Options -->
                    <div class="pt-6 border-t border-gray-100">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-3">@Localizer["User.FilterSort"]</label>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <!-- Airline Company -->
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-2">@Localizer["User.Airline"]</label>
                                <div class="relative">
                                    <select name="companyName" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-2.5 font-semibold text-sm focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 appearance-none hover:border-indigo-300 transition-colors">
                                        <option value="">@Localizer["User.AllAirlines"]</option>
                                        @foreach (var company in Model.AvailableCompanies)
                                        {
                                            <option value="@company" selected="@(Model.CompanyName == company)">@company</option>
                                        }
                                    </select>
                                    <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-gray-400">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Sort By -->
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-2">@Localizer["User.SortBy"]</label>
                                <div class="relative">
                                    <select name="sortBy" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-2.5 font-semibold text-sm focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 appearance-none hover:border-indigo-300 transition-colors">
                                        <option value="@Ticket_Booking.Enums.SortCriteria.DepartureTimeAsc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.DepartureTimeAsc)">@Localizer["User.Sort.EarliestDeparture"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.DepartureTimeDesc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.DepartureTimeDesc)">@Localizer["User.Sort.LatestDeparture"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.PriceAsc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.PriceAsc)">@Localizer["User.Sort.LowestPrice"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.PriceDesc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.PriceDesc)">@Localizer["User.Sort.HighestPrice"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.DurationAsc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.DurationAsc)">@Localizer["User.Sort.ShortestDuration"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.DurationDesc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.DurationDesc)">@Localizer["User.Sort.LongestDuration"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.DistanceAsc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.DistanceAsc)">@Localizer["User.Sort.ShortestDistance"]</option>
                                        <option value="@Ticket_Booking.Enums.SortCriteria.DistanceDesc" selected="@(Model.SortBy == Ticket_Booking.Enums.SortCriteria.DistanceDesc)">@Localizer["User.Sort.LongestDistance"]</option>
                                    </select>
                                    <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-gray-400">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Seat Class -->
                            <div>
                                <label class="block text-xs font-bold text-gray-500 mb-2">@Localizer["User.PriceSeatClass"]</label>
                                <div class="relative">
                                    <select name="seatClass" class="w-full bg-gray-50 text-gray-900 border-2 border-gray-100 rounded-xl px-4 py-2.5 font-semibold text-sm focus:outline-none focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 appearance-none hover:border-indigo-300 transition-colors">
                                        <option value="@Ticket_Booking.Enums.SeatClass.Economy" selected="@(Model.SeatClass == Ticket_Booking.Enums.SeatClass.Economy)">@Localizer["User.Economy"]</option>
                                        <option value="@Ticket_Booking.Enums.SeatClass.Business" selected="@(Model.SeatClass == Ticket_Booking.Enums.SeatClass.Business)">@Localizer["User.Business"]</option>
                                        <option value="@Ticket_Booking.Enums.SeatClass.FirstClass" selected="@(Model.SeatClass == Ticket_Booking.Enums.SeatClass.FirstClass)">@Localizer["User.FirstClass"]</option>
                                    </select>
                                    <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-gray-400">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    <div class="max-w-7xl mx-auto px-4 pt-24 pb-16">
        @if (Model.Trips != null && Model.Trips.Any())
        {
            <!-- Outbound Flights Section -->
            <div class="mb-12">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-2xl font-black text-indigo-900 tracking-tight">
                        @if (Model.TripType == "RoundTrip")
                        {
                            <span>@Localizer["User.OutboundFlights"]</span>
                        }
                        else
                        {
                            <span>@Localizer["User.AvailableFlights"]</span>
                        }
                    </h2>
                    <span class="bg-indigo-100 text-indigo-800 text-xs font-bold px-3 py-1 rounded-full">@Model.Trips.Count() @Localizer["User.Found"]</span>
                </div>

                <div class="grid grid-cols-1 gap-6">
                    @foreach (var trip in Model.Trips)
                    {
                        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all border border-gray-100 group">
                            <div class="grid grid-cols-1 md:grid-cols-12">
                                <!-- Flight Info -->
                                <div class="md:col-span-8 p-6 md:p-8 flex flex-col justify-center">
                                    <div class="flex items-center justify-between mb-6">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 bg-indigo-50 rounded-lg flex items-center justify-center text-indigo-600">
                                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                                            </div>
                                            <div>
                                                <div class="text-sm font-bold text-gray-900">@trip.Company?.Name</div>
                                                <div class="text-xs text-gray-500 font-mono">@trip.PlaneName</div>
                                            </div>
                                        </div>
                                        <div class="text-xs font-bold text-gray-400 bg-gray-50 px-3 py-1 rounded-full border border-gray-100">
                                            @trip.EstimatedDuration mins
                                        </div>
                                    </div>

                                    <div class="flex items-center justify-between relative">
                                        <!-- From -->
                                        <div class="text-center w-1/3">
                                            <div class="text-2xl font-black text-indigo-900">@trip.DepartureTime.ToString("HH:mm")</div>
                                            <div class="text-xs font-bold text-gray-500 uppercase tracking-wider mt-1">@trip.FromCity</div>
                                            <div class="text-[10px] text-gray-400 font-mono mt-1">@trip.DepartureTime.ToString("dd MMM")</div>
                                        </div>

                                        <!-- Path Visual -->
                                        <div class="flex-1 px-4 relative flex items-center justify-center">
                                            <div class="w-full h-0.5 bg-gray-200 absolute"></div>
                                            <div class="w-2 h-2 bg-indigo-500 rounded-full absolute left-0"></div>
                                            <div class="w-2 h-2 bg-indigo-500 rounded-full absolute right-0"></div>
                                            <svg class="w-6 h-6 text-indigo-500 relative z-10 bg-white px-1 transform rotate-90" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                                        </div>

                                        <!-- To -->
                                        <div class="text-center w-1/3">
                                            <div class="text-2xl font-black text-indigo-900">@trip.ArrivalTime.ToString("HH:mm")</div>
                                            <div class="text-xs font-bold text-gray-500 uppercase tracking-wider mt-1">@trip.ToCity</div>
                                            <div class="text-[10px] text-gray-400 font-mono mt-1">@trip.ArrivalTime.ToString("dd MMM")</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Price & Action -->
                                <div class="md:col-span-4 bg-gray-50 p-6 md:p-8 flex flex-col justify-center items-center border-t md:border-t-0 md:border-l border-gray-100">
                                    <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">@Localizer["User.StartingFrom"]</div>
                                    <div class="text-3xl font-black text-indigo-600 mb-4">@Html.DisplayPrice(trip.EconomyPrice)</div>
                                    
                                    <a href="@Url.Action("BookTrip", "User", new { tripId = trip.Id })" class="w-full bg-indigo-900 text-white py-3 rounded-xl font-bold uppercase tracking-widest text-xs hover:bg-indigo-800 transition-all shadow-lg text-center group-hover:scale-105 transform">
                                        @Localizer["User.SelectFlight"]
                                    </a>
                                    <div class="mt-4 text-[10px] text-gray-400 font-bold">
                                        @trip.EconomySeats @Localizer["User.SeatsLeft"]
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Return Flights Section (Only for Round-Trip) -->
            @if (Model.TripType == "RoundTrip" && Model.ReturnTrips != null && Model.ReturnTrips.Any())
            {
                <div class="mb-12">
                    <div class="flex items-center justify-between mb-8">
                        <h2 class="text-2xl font-black text-purple-900 tracking-tight">@Localizer["User.ReturnFlights"]</h2>
                        <span class="bg-purple-100 text-purple-800 text-xs font-bold px-3 py-1 rounded-full">@Model.ReturnTrips.Count() @Localizer["User.Found"]</span>
                    </div>

                    <div class="grid grid-cols-1 gap-6">
                        @foreach (var trip in Model.ReturnTrips)
                        {
                            <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all border border-purple-100 group">
                                <div class="grid grid-cols-1 md:grid-cols-12">
                                    <!-- Flight Info -->
                                    <div class="md:col-span-8 p-6 md:p-8 flex flex-col justify-center">
                                        <div class="flex items-center justify-between mb-6">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center text-purple-600">
                                                    <svg class="w-6 h-6 transform rotate-180" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                                                </div>
                                                <div>
                                                    <div class="text-sm font-bold text-gray-900">@trip.Company?.Name</div>
                                                    <div class="text-xs text-gray-500 font-mono">@trip.PlaneName</div>
                                                </div>
                                            </div>
                                            <div class="text-xs font-bold text-gray-400 bg-purple-50 px-3 py-1 rounded-full border border-purple-100">
                                                @trip.EstimatedDuration mins
                                            </div>
                                        </div>

                                        <div class="flex items-center justify-between relative">
                                            <!-- From -->
                                            <div class="text-center w-1/3">
                                                <div class="text-2xl font-black text-purple-900">@trip.DepartureTime.ToString("HH:mm")</div>
                                                <div class="text-xs font-bold text-gray-500 uppercase tracking-wider mt-1">@trip.FromCity</div>
                                                <div class="text-[10px] text-gray-400 font-mono mt-1">@trip.DepartureTime.ToString("dd MMM")</div>
                                            </div>

                                            <!-- Path Visual -->
                                            <div class="flex-1 px-4 relative flex items-center justify-center">
                                                <div class="w-full h-0.5 bg-gray-200 absolute"></div>
                                                <div class="w-2 h-2 bg-purple-500 rounded-full absolute left-0"></div>
                                                <div class="w-2 h-2 bg-purple-500 rounded-full absolute right-0"></div>
                                                <svg class="w-6 h-6 text-purple-500 relative z-10 bg-white px-1 transform -rotate-90" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                                            </div>

                                            <!-- To -->
                                            <div class="text-center w-1/3">
                                                <div class="text-2xl font-black text-purple-900">@trip.ArrivalTime.ToString("HH:mm")</div>
                                                <div class="text-xs font-bold text-gray-500 uppercase tracking-wider mt-1">@trip.ToCity</div>
                                                <div class="text-[10px] text-gray-400 font-mono mt-1">@trip.ArrivalTime.ToString("dd MMM")</div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Price & Action -->
                                    <div class="md:col-span-4 bg-purple-50 p-6 md:p-8 flex flex-col justify-center items-center border-t md:border-t-0 md:border-l border-purple-100">
                                        <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">@Localizer["User.StartingFrom"]</div>
                                        <div class="text-3xl font-black text-purple-600 mb-4">@Html.DisplayPrice(trip.EconomyPrice)</div>
                                        
                                        <a href="@Url.Action("BookTrip", "User", new { tripId = trip.Id })" class="w-full bg-purple-900 text-white py-3 rounded-xl font-bold uppercase tracking-widest text-xs hover:bg-purple-800 transition-all shadow-lg text-center group-hover:scale-105 transform">
                                            @Localizer["User.SelectFlight"]
                                        </a>
                                        <div class="mt-4 text-[10px] text-gray-400 font-bold">
                                            @trip.EconomySeats @Localizer["User.SeatsLeft"]
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.TripType == "RoundTrip" && Model.ReturnDate.HasValue)
            {
                <!-- No Return Flights Found Message -->
                <div class="text-center py-12 bg-yellow-50 rounded-2xl border-2 border-yellow-100">
                    <div class="inline-block p-4 rounded-full bg-yellow-100 mb-4">
                        <svg class="w-12 h-12 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                    </div>
                    <h3 class="text-lg font-black text-yellow-900 mb-2">@Localizer["User.NoReturnFlightsFound"]</h3>
                    <p class="text-gray-600 max-w-md mx-auto text-sm">@Localizer["User.TryDifferentReturnDate"]</p>
                </div>
            }
        }
        else
        {
            <div class="text-center py-20">
                <div class="inline-block p-6 rounded-full bg-indigo-50 mb-6">
                    <svg class="w-16 h-16 text-indigo-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                </div>
                <h3 class="text-xl font-black text-indigo-900 mb-2">@Localizer["User.ReadyForTakeoff"]</h3>
                <p class="text-gray-500 max-w-md mx-auto">@Localizer["User.SelectDestinationDates"]</p>
            </div>
        }
    </div>
</div>

<style>
    @@keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
