@model Ticket_Booking.Models.DomainModels.User

@{
    ViewData["Title"] = "Passenger Profile";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">Passenger Manifest</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">MY PROFILE</h1>
            </div>
            <div class="text-right mt-4 md:mt-0">
                <div class="text-xs font-bold text-gray-400 uppercase tracking-widest">Member Status</div>
                <div class="text-xl font-bold text-indigo-600">@Model.Role.ToString().ToUpper() CLASS</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Left Column: Passport/ID Card -->
            <div class="lg:col-span-4">
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden relative group transform transition-all hover:scale-[1.01]">
                    <!-- Decorative Top Bar -->
                    <div class="h-2 bg-gradient-to-r from-indigo-600 to-purple-600"></div>
                    
                    <div class="p-8 relative">
                        <!-- Watermark -->
                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-[0.03] pointer-events-none">
                            <svg class="w-64 h-64" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/></svg>
                        </div>

                        <div class="text-center relative z-10">
                            <div class="inline-block p-1 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 mb-6">
                                <div class="h-32 w-32 rounded-full bg-white border-4 border-white shadow-inner flex items-center justify-center overflow-hidden relative">
                                    <span class="text-5xl font-black text-indigo-900">
                                        @(!string.IsNullOrEmpty(Model.FullName) ? Model.FullName.Substring(0, 1).ToUpper() : "?")
                                    </span>
                                    <!-- Holographic Overlay Effect -->
                                    <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/30 to-transparent opacity-50"></div>
                                </div>
                            </div>

                            <h2 class="text-2xl font-black text-gray-900 tracking-tight mb-1">
                                @(!string.IsNullOrEmpty(Model.FullName) ? Model.FullName.ToUpper() : "UNKNOWN PASSENGER")
                            </h2>
                            <p class="text-xs font-bold text-indigo-600 uppercase tracking-widest mb-6">ID: @Model.Id.ToString("D8")</p>

                            <div class="space-y-4 text-left bg-gray-50 p-6 rounded-2xl border border-gray-100">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider">Email Contact</label>
                                    <div class="text-sm font-bold text-gray-900 truncate">@Model.Email</div>
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider">Mobile Contact</label>
                                    <div class="text-sm font-bold text-gray-900">@(string.IsNullOrEmpty(Model.Phone) ? "NOT REGISTERED" : Model.Phone)</div>
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider">Registration Date</label>
                                    <div class="text-sm font-bold text-gray-900">@Model.CreatedAt.ToString("dd MMM yyyy").ToUpper()</div>
                                </div>
                            </div>

                            <button class="mt-6 w-full bg-indigo-900 text-white py-3 rounded-xl font-bold uppercase tracking-widest text-xs hover:bg-indigo-800 transition-all shadow-lg flex items-center justify-center gap-2 group">
                                <span>Update Passport</span>
                                <svg class="w-4 h-4 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
                            </button>
                        </div>
                    </div>
                    
                    <!-- Barcode Footer -->
                    <div class="bg-gray-900 p-4 flex justify-between items-center opacity-90">
                        <div class="h-8 w-32 bg-white/20 mask-barcode"></div>
                        <span class="text-white/50 text-[10px] tracking-widest">VERIFIED</span>
                    </div>
                </div>
            </div>

            <!-- Right Column: Flight Log & Stats -->
            <div class="lg:col-span-8 space-y-8">
                <!-- Stats Row -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <!-- Stat Card 1 -->
                    <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-indigo-500 relative overflow-hidden group">
                        <div class="absolute right-0 top-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                            <svg class="w-16 h-16 text-indigo-900" fill="currentColor" viewBox="0 0 24 24"><path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/></svg>
                        </div>
                        <div class="relative z-10">
                            <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Total Flights</div>
                            <div class="text-3xl font-black text-indigo-900">@((Model.Tickets?.Count ?? 0).ToString("D2"))</div>
                        </div>
                    </div>

                    <!-- Stat Card 2 -->
                    <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-purple-500 relative overflow-hidden group">
                        <div class="absolute right-0 top-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                            <svg class="w-16 h-16 text-purple-900" fill="currentColor" viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm4.24 16L12 15.45 7.77 18l1.12-4.81-3.73-3.23 4.92-.42L12 5l1.92 4.53 4.92.42-3.73 3.23L16.23 18z"/></svg>
                        </div>
                        <div class="relative z-10">
                            <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Reviews</div>
                            <div class="text-3xl font-black text-purple-900">@((Model.Reviews?.Count ?? 0).ToString("D2"))</div>
                        </div>
                    </div>

                    <!-- Stat Card 3 -->
                    <div class="bg-white p-6 rounded-2xl shadow-sm border-l-4 border-emerald-500 relative overflow-hidden group">
                        <div class="absolute right-0 top-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                            <svg class="w-16 h-16 text-emerald-900" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.15-1.46-3.27-3.4h1.96c.1 1.05.69 1.64 1.83 1.64.93 0 1.6-.46 1.6-1.22 0-.77-.6-1.11-1.64-1.37l-.81-.19c-2.31-.56-3.46-1.59-3.46-3.52 0-1.88 1.4-3.05 2.79-3.45V4.5h2.67v1.95c1.41.35 2.77 1.35 2.91 3.15h-1.99c-.11-.8-.61-1.32-1.52-1.32-.83 0-1.44.4-1.44 1.15 0 .73.65 1.05 1.71 1.33l.81.2c2.5.66 3.63 1.73 3.63 3.66 0 1.97-1.47 3.2-3.11 3.47z"/></svg>
                        </div>
                        <div class="relative z-10">
                            <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Miles/Points</div>
                            <div class="text-3xl font-black text-emerald-900">00</div>
                        </div>
                    </div>
                </div>

                <!-- Flight History Table -->
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
                    <div class="px-8 py-6 border-b border-gray-100 flex justify-between items-center bg-gray-50/50">
                        <div class="flex items-center gap-3">
                            <div class="w-2 h-8 bg-indigo-900 rounded-full"></div>
                            <h3 class="text-lg font-black text-gray-900 tracking-tight uppercase">Flight History</h3>
                        </div>
                        <a href="#" class="text-xs font-bold text-indigo-600 hover:text-indigo-800 uppercase tracking-widest border-b-2 border-transparent hover:border-indigo-600 transition-all">View Full Log</a>
                    </div>

                    @if (Model.Tickets != null && Model.Tickets.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-100">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-4 text-left text-[10px] font-bold text-gray-400 uppercase tracking-widest">Trip ID</th>
                                        <th class="px-6 py-4 text-left text-[10px] font-bold text-gray-400 uppercase tracking-widest">Date</th>
                                        <th class="px-6 py-4 text-left text-[10px] font-bold text-gray-400 uppercase tracking-widest">Seat</th>
                                        <th class="px-6 py-4 text-left text-[10px] font-bold text-gray-400 uppercase tracking-widest">Status</th>
                                        <th class="px-6 py-4 text-left text-[10px] font-bold text-gray-400 uppercase tracking-widest">Fare</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-50">
                                    @foreach (var ticket in Model.Tickets.Take(5))
                                    {
                                        <tr class="hover:bg-indigo-50/30 transition-colors group">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm font-bold text-indigo-900 font-mono">#@ticket.TripId</div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm font-medium text-gray-600">@ticket.BookingDate.ToString("dd MMM yyyy").ToUpper()</div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm font-bold text-gray-900 bg-gray-100 px-2 py-1 rounded inline-block">@ticket.SeatNumber</div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-3 py-1 inline-flex text-[10px] leading-5 font-bold rounded-full bg-green-100 text-green-800 uppercase tracking-wider border border-green-200">
                                                    @ticket.PaymentStatus
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                                                $@ticket.TotalPrice
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-16 bg-gray-50/30">
                            <div class="mx-auto h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                                <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                            </div>
                            <h3 class="text-lg font-bold text-gray-900 mb-1">No Flight Records</h3>
                            <p class="text-sm text-gray-500 mb-6">Your travel log is currently empty.</p>
                            <a href="/" class="inline-flex items-center px-6 py-3 border border-transparent shadow-lg text-xs font-bold rounded-xl text-white bg-indigo-900 hover:bg-indigo-800 uppercase tracking-widest transition-all transform hover:scale-105">
                                Book First Trip
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .mask-barcode {
        background-image: repeating-linear-gradient(90deg, transparent, transparent 2px, white 2px, white 4px);
    }
    @@keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
</style>
