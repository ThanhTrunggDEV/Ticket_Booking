@model Ticket_Booking.Models.ViewModels.PaymentSuccessViewModel
@using Ticket_Booking.Enums

@{
    ViewData["Title"] = "Payment Successful";
    Layout = "_Layout";
    var primary = Model.PrimaryTicket;
}

<div class="min-h-screen bg-zinc-100 font-mono relative overflow-hidden py-12">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>

    <div class="max-w-4xl mx-auto px-4 relative z-10">
        <div class="mb-8">
            <a href="@Url.Action("MyBooking", "User")" class="inline-flex items-center text-indigo-600 font-bold hover:text-indigo-800 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                @Localizer["User.MyBookings"]
            </a>
        </div>

        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">
            <!-- Header (same style as BookTrip) -->
            <div class="bg-indigo-900 p-8 text-white relative overflow-hidden">
                <div class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-white opacity-10 rounded-full blur-2xl"></div>
                <h1 class="text-3xl font-black tracking-tighter mb-2">
                    @Localizer["User.PaymentSuccessTitle"]
                </h1>
                <p class="text-indigo-200 font-bold uppercase tracking-widest text-xs">
                    @Localizer["User.PaymentSuccessSubtitle", primary.PNR]
                </p>
            </div>

            <div class="p-8 md:p-12 space-y-6">
                <!-- Trips List -->
                <div>
                    <h2 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-3">@Localizer["User.YourTrips"]</h2>
                    <div class="space-y-3">
                        @foreach (var ticket in Model.Tickets)
                        {
                            <div class="flex flex-col md:flex-row items-center justify-between bg-zinc-50 rounded-2xl px-4 py-3 border border-zinc-100">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 rounded-2xl bg-indigo-600 text-white flex items-center justify-center font-black">
                                        @ticket.Trip.Company.Name.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="text-sm font-black text-indigo-900">
                                            @ticket.Trip.FromCity
                                            <span class="text-gray-400 mx-1">→</span>
                                            @ticket.Trip.ToCity
                                        </div>
                                        <div class="text-xs text-gray-500 font-mono">
                                            @ticket.Trip.DepartureTime.ToString("dd MMM yyyy, HH:mm")
                                        </div>
                                        <div class="text-[11px] text-gray-400 font-bold uppercase tracking-widest mt-1">
                                            @ticket.SeatClass · @Localizer["User.Seat"] @ticket.SeatNumber
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3 md:mt-0 flex items-center gap-4">
                                    <div class="text-right">
                                        <div class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">PNR</div>
                                        <div class="px-3 py-1 rounded-lg bg-indigo-50 border border-indigo-200 text-xs font-black text-indigo-700 font-mono tracking-widest">
                                            @ticket.PNR
                                        </div>
                                    </div>
                                    <a href="@Url.Action("Ticket", "User", new { id = ticket.Id })"
                                       class="inline-flex items-center px-4 py-2 bg-white border border-indigo-200 text-indigo-700 rounded-xl font-bold text-xs uppercase tracking-widest hover:bg-indigo-50 transition-colors">
                                        @Localizer["User.ViewTicket"]
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="pt-4 border-t border-gray-100 flex flex-col md:flex-row items-center justify-between gap-4">
                    <div class="text-xs text-gray-500">
                        @Localizer["User.PaymentSuccessNote"]
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <a href="@Url.Action("MyBooking", "User")"
                           class="inline-flex items-center px-5 py-2.5 bg-indigo-600 text-white rounded-xl font-bold text-xs uppercase tracking-widest hover:bg-indigo-700 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18" />
                            </svg>
                            @Localizer["User.MyBookings"]
                        </a>
                        <a href="@Url.Action("Index", "User")"
                           class="inline-flex items-center px-5 py-2.5 bg-white border border-gray-300 text-gray-700 rounded-xl font-bold text-xs uppercase tracking-widest hover:bg-gray-50 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                            </svg>
                            @Localizer["User.BookMore"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


