@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="bg-white rounded-2xl shadow-xl overflow-hidden">
    <div class="p-6 bg-indigo-900 text-white">
        <h3 class="text-xl font-black tracking-tighter">DASHBOARD</h3>
        <p class="text-xs text-indigo-300 uppercase tracking-widest">Passenger Control</p>
    </div>
    <nav class="p-4 space-y-2">
        <a asp-action="Profile" asp-controller="User" 
           class="flex items-center space-x-3 px-4 py-3 rounded-xl transition-all @(currentAction == "Profile" ? "bg-indigo-50 text-indigo-900 font-bold shadow-sm" : "text-gray-600 hover:bg-gray-50 hover:text-indigo-600")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            <span>My Profile</span>
        </a>
        
        <a asp-action="MyBooking" asp-controller="User" 
           class="flex items-center space-x-3 px-4 py-3 rounded-xl transition-all @(currentAction == "MyBooking" ? "bg-indigo-50 text-indigo-900 font-bold shadow-sm" : "text-gray-600 hover:bg-gray-50 hover:text-indigo-600")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/></svg>
            <span>My Bookings</span>
        </a>

        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl transition-all text-gray-600 hover:bg-gray-50 hover:text-indigo-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/></svg>
            <span>Travel History</span>
        </a>

        <div class="border-t border-gray-100 my-2"></div>

        <a asp-action="Logout" asp-controller="Login" 
           class="flex items-center space-x-3 px-4 py-3 rounded-xl transition-all text-red-600 hover:bg-red-50 hover:text-red-700">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
            <span>Sign Out</span>
        </a>
    </nav>
</div>