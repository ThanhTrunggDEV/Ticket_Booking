@{
    ViewData["Title"] = "Thanh Toán Phí Đổi Vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var ticketId = ViewBag.TicketId as int?;
    var amount = ViewBag.Amount as decimal?;
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Thanh Toán Phí Đổi Vé</h1>

    <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
        <div class="mb-6">
            <p class="text-gray-700 mb-2">Số tiền cần thanh toán:</p>
            <p class="text-3xl font-bold text-blue-600">$@(amount?.ToString("F2") ?? "0.00")</p>
        </div>

        <div class="bg-blue-50 rounded-lg p-4 mb-6">
            <p class="text-sm text-gray-700">
                Sau khi thanh toán thành công, vé của bạn sẽ được đổi tự động. 
                Vui lòng kiểm tra email để nhận thông báo xác nhận.
            </p>
        </div>

        <form method="post" action="@Url.Action("ProcessChangeAfterPayment", "TicketChange")">
            <input type="hidden" name="ticketId" value="@ticketId" />
            
            <!-- Payment method selection can be added here -->
            <!-- For now, we'll use a simple button that simulates payment success -->
            <div class="flex gap-4">
                <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600">
                    Xác Nhận Thanh Toán
                </button>
                <a href="@Url.Action("Index", "TicketChange", new { ticketId })" class="bg-gray-300 text-gray-700 px-6 py-2 rounded hover:bg-gray-400">
                    Hủy
                </a>
            </div>
        </form>

        <!-- Note: In production, integrate with actual payment gateway (VNPay, etc.) -->
        <div class="mt-4 text-sm text-gray-500">
            <p>* Tích hợp với cổng thanh toán VNPay sẽ được thực hiện sau.</p>
        </div>
    </div>
</div>

