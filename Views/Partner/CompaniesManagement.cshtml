@model IEnumerable<Ticket_Booking.Models.DomainModels.Company>

@{
    ViewData["Title"] = "My Companies";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">@Localizer["Partner.PartnerPortal"]</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">@Localizer["Partner.FleetManagement"]</h1>
            </div>
            <div class="mt-4 md:mt-0">
                <a href="@Url.Action("CreateCompany", "Partner")" class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    @Localizer["Partner.RegisterAirline"]
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Right Column: Content -->
            <div class="lg:col-span-12">
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="text-lg font-black text-indigo-900 uppercase tracking-tighter">@Localizer["Partner.RegisteredAirlines"]</h3>
                        <div class="flex space-x-2">
                            <input type="text" placeholder="@Localizer["Partner.SearchAirlines"]" class="px-4 py-2 bg-zinc-50 border border-zinc-200 rounded-lg text-sm font-mono focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                    </div>
                    
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead class="bg-zinc-50">
                                <tr>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">@Localizer["Partner.Airline"]</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">@Localizer["Partner.ContactInfo"]</th>
                                    <th scope="col" class="px-6 py-4 text-right text-xs font-bold text-gray-400 uppercase tracking-widest">@Localizer["Admin.Actions"]</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                @foreach (var company in Model)
                                {
                                    <tr class="hover:bg-zinc-50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-12 w-12">
                                                    @if (!string.IsNullOrEmpty(company.LogoUrl))
                                                    {
                                                        <img class="h-12 w-12 rounded-full object-cover border-2 border-white shadow-md" src="@company.LogoUrl" alt="">
                                                    }
                                                    else
                                                    {
                                                        <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-500 border-2 border-white shadow-md">
                                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-bold text-indigo-900">@company.Name</div>
                                                    <div class="text-xs font-mono text-gray-500">@Localizer["Common.ID"]: @company.Id</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-600">@company.Contact</div>
                                        </td>

                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <a href="@Url.Action("EditCompany", "Partner", new { id = company.Id })" class="text-indigo-600 hover:text-indigo-900 mr-4 font-bold">@Localizer["Common.Edit"]</a>
                                            <form asp-action="DeleteCompany" asp-route-id="@company.Id" method="post" onsubmit="return confirm('@Localizer["Partner.DeleteCompanyConfirm"]');" class="inline">
                                                <button type="submit" class="text-red-400 hover:text-red-600 font-bold">@Localizer["Common.Delete"]</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @if (!Model.Any())
                    {
                        <div class="p-12 text-center text-gray-400">
                            <svg class="mx-auto h-16 w-16 text-gray-200 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <p class="font-mono text-sm">@Localizer["Partner.NoAirlinesRegistered"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
