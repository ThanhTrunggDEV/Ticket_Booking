@model Ticket_Booking.Models.ViewModels.PartnerDashboardViewModel

@{
    ViewData["Title"] = "Partner Dashboard";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">Partner Portal</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">DASHBOARD</h1>
            </div>
            <div class="text-right mt-4 md:mt-0">
                <div class="text-xs font-bold text-gray-400 uppercase tracking-widest">Partner Status</div>
                <div class="text-xl font-bold text-indigo-600">ACTIVE</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Left Column: Navigation & Profile -->
            <div class="lg:col-span-4 space-y-6">
                <!-- Partner Profile Card -->
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden relative group transform transition-all hover:scale-[1.01]">
                    <!-- Decorative Top Bar -->
                    <div class="h-2 bg-gradient-to-r from-indigo-600 to-purple-600"></div>
                    
                    <div class="p-8 relative">
                        <!-- Watermark -->
                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-[0.03] pointer-events-none">
                            <svg class="w-64 h-64" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/></svg>
                        </div>

                        <div class="text-center relative z-10">
                            <div class="inline-block p-1 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 mb-6">
                                <div class="h-32 w-32 rounded-full bg-white border-4 border-white shadow-inner flex items-center justify-center overflow-hidden relative">
                                    <span class="text-5xl font-black text-indigo-900">
                                        @(!string.IsNullOrEmpty(Context.Session.GetString("UserName")) ? Context.Session.GetString("UserName").Substring(0, 1).ToUpper() : "P")
                                    </span>
                                </div>
                            </div>
                            
                            <h2 class="text-2xl font-black text-indigo-900 mb-1">@Context.Session.GetString("UserName")</h2>
                            <div class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-50 text-indigo-600 text-xs font-bold uppercase tracking-wider">
                                Transport Partner
                            </div>
                        </div>

                        <nav class="mt-8 space-y-2 relative z-10">
                            <a href="#" class="flex items-center px-4 py-3 bg-indigo-50 text-indigo-900 rounded-xl font-bold border-l-4 border-indigo-600 transition-all">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path></svg>
                                Dashboard
                            </a>
                            <a href="@Url.Action("CompaniesManagement", "Partner")" class="flex items-center px-4 py-3 text-gray-500 hover:bg-indigo-50 hover:text-indigo-900 rounded-xl font-bold transition-all border-l-4 border-transparent hover:border-indigo-300">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                                My Companies
                            </a>
                            <a href="@Url.Action("TripsManagement", "Partner")" class="flex items-center px-4 py-3 text-gray-500 hover:bg-indigo-50 hover:text-indigo-900 rounded-xl font-bold transition-all border-l-4 border-transparent hover:border-indigo-300">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                                Trips Management
                            </a>
                            <a href="#" class="flex items-center px-4 py-3 text-gray-500 hover:bg-indigo-50 hover:text-indigo-900 rounded-xl font-bold transition-all border-l-4 border-transparent hover:border-indigo-300">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path></svg>
                                Bookings
                            </a>
                            <a href="@Url.Action("Logout", "Login")" class="flex items-center px-4 py-3 text-red-400 hover:bg-red-50 hover:text-red-600 rounded-xl font-bold transition-all border-l-4 border-transparent mt-4">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                                Logout
                            </a>
                        </nav>
                    </div>
                </div>

                <!-- Quick Actions Card -->
                <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-20 h-20 bg-indigo-50 rounded-bl-full -mr-10 -mt-10"></div>
                    <h3 class="text-sm font-black text-indigo-900 uppercase tracking-widest mb-4 relative z-10">Quick Actions</h3>
                    <div class="space-y-3 relative z-10">
                        <a href="@Url.Action("CreateTrip", "Partner")" class="w-full flex items-center justify-between p-4 bg-zinc-50 rounded-xl hover:bg-indigo-50 hover:text-indigo-700 transition-all group text-sm font-bold border border-zinc-100 hover:border-indigo-200">
                            <span>Create New Trip</span>
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                        </a>
                        <button class="w-full flex items-center justify-between p-4 bg-zinc-50 rounded-xl hover:bg-indigo-50 hover:text-indigo-700 transition-all group text-sm font-bold border border-zinc-100 hover:border-indigo-200">
                            <span>View Reports</span>
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Right Column: Content -->
            <div class="lg:col-span-8 space-y-8">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Total Companies -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-indigo-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-indigo-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Total Companies</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.TotalCompanies</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-green-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                                <span>Active Fleet</span>
                            </div>
                        </div>
                    </div>

                    <!-- Total Trips -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-purple-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-purple-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Total Trips</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.TotalTrips</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-indigo-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                <span>Scheduled</span>
                            </div>
                        </div>
                    </div>

                    <!-- Total Bookings -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-pink-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-pink-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Total Bookings</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.TotalBookings</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-pink-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
                                <span>Confirmed</span>
                            </div>
                        </div>
                    </div>

                    <!-- Revenue -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-yellow-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-yellow-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Total Revenue</div>
                            <div class="text-4xl font-black text-indigo-900">$@Model.TotalRevenue.ToString("N0")</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-yellow-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                <span>Gross</span>
                            </div>
                        </div>
                    </div>

                    <!-- Rating -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-orange-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-orange-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Avg Rating</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.AverageRating</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-orange-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>
                                <span>Stars</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Bookings Table -->
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="text-lg font-black text-indigo-900 uppercase tracking-tighter">Recent Bookings</h3>
                        <a href="#" class="text-xs font-bold text-indigo-600 hover:text-indigo-800 uppercase tracking-widest">View All</a>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead class="bg-zinc-50">
                                <tr>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Booking ID</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Trip</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Date</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Amount</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Status</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                @foreach (var ticket in Model.RecentBookings)
                                {
                                    <tr class="hover:bg-zinc-50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-indigo-900">
                                            #@ticket.Id
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-600">
                                            @ticket.TripId
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @ticket.BookingDate.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-indigo-900">
                                            $@ticket.TotalPrice.ToString("N0")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-bold rounded-full @(ticket.PaymentStatus == Ticket_Booking.Enums.PaymentStatus.Success ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                                                @ticket.PaymentStatus
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.RecentBookings.Any())
                    {
                        <div class="p-12 text-center text-gray-400">
                            <svg class="w-16 h-16 mx-auto mb-4 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <p class="font-mono text-sm">No recent bookings found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
