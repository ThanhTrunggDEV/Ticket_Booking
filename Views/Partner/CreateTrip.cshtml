@model Ticket_Booking.Models.DomainModels.Trip

@{
    ViewData["Title"] = "Schedule Trip";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="p-6 border-b border-gray-100">
                <h2 class="text-xl font-bold text-gray-900">Schedule New Trip</h2>
                <p class="mt-1 text-sm text-gray-500">Create a new trip schedule for your airline</p>
            </div>
            
            <form asp-action="CreateTrip" method="post" class="p-6 space-y-6">
                <div class="grid grid-cols-1 gap-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="FromCity" class="block text-sm font-medium text-gray-700">From City</label>
                            <input asp-for="FromCity" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="FromCity" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="ToCity" class="block text-sm font-medium text-gray-700">To City</label>
                            <input asp-for="ToCity" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="ToCity" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Distance" class="block text-sm font-medium text-gray-700">Distance (km)</label>
                            <input asp-for="Distance" type="number" step="0.01" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="Distance" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="EstimatedDuration" class="block text-sm font-medium text-gray-700">Duration (minutes)</label>
                            <input asp-for="EstimatedDuration" type="number" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="EstimatedDuration" class="text-red-500 text-xs"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="CompanyId" class="block text-sm font-medium text-gray-700">Airline</label>
                        <select asp-for="CompanyId" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                            <option value="">Select an airline</option>
                            @if (ViewBag.Companies != null)
                            {
                                foreach (var company in ViewBag.Companies)
                                {
                                    <option value="@company.Id">@company.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CompanyId" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="PlaneName" class="block text-sm font-medium text-gray-700">Plane Name</label>
                            <input asp-for="PlaneName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="PlaneName" class="text-red-500 text-xs"></span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="DepartureTime" class="block text-sm font-medium text-gray-700">Departure Time</label>
                            <input asp-for="DepartureTime" type="datetime-local" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="DepartureTime" class="text-red-500 text-xs"></span>
                        </div>

                        <div>
                            <label asp-for="ArrivalTime" class="block text-sm font-medium text-gray-700">Arrival Time</label>
                            <input asp-for="ArrivalTime" type="datetime-local" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="ArrivalTime" class="text-red-500 text-xs"></span>
                        </div>
                    </div>

                    <!-- Seat Classes Configuration -->
                    <div class="border-t border-gray-200 pt-6">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Seat Classes & Pricing</h3>
                        
                        <!-- Economy Class -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6 bg-gray-50 p-4 rounded-lg">
                            <div>
                                <label asp-for="EconomySeats" class="block text-sm font-medium text-gray-700">Economy Seats</label>
                                <input asp-for="EconomySeats" type="number" min="0" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                                <span asp-validation-for="EconomySeats" class="text-red-500 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="EconomyPrice" class="block text-sm font-medium text-gray-700">Economy Price</label>
                                <div class="mt-1 relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="EconomyPrice" type="number" step="0.01" min="0" class="focus:ring-blue-500 focus:border-blue-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" required />
                                </div>
                                <span asp-validation-for="EconomyPrice" class="text-red-500 text-xs"></span>
                            </div>
                        </div>

                        <!-- Business Class -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6 bg-blue-50 p-4 rounded-lg">
                            <div>
                                <label asp-for="BusinessSeats" class="block text-sm font-medium text-gray-700">Business Seats</label>
                                <input asp-for="BusinessSeats" type="number" min="0" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                                <span asp-validation-for="BusinessSeats" class="text-red-500 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="BusinessPrice" class="block text-sm font-medium text-gray-700">Business Price</label>
                                <div class="mt-1 relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="BusinessPrice" type="number" step="0.01" min="0" class="focus:ring-blue-500 focus:border-blue-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="BusinessPrice" class="text-red-500 text-xs"></span>
                            </div>
                        </div>

                        <!-- First Class -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-purple-50 p-4 rounded-lg">
                            <div>
                                <label asp-for="FirstClassSeats" class="block text-sm font-medium text-gray-700">First Class Seats</label>
                                <input asp-for="FirstClassSeats" type="number" min="0" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                                <span asp-validation-for="FirstClassSeats" class="text-red-500 text-xs"></span>
                            </div>
                            <div>
                                <label asp-for="FirstClassPrice" class="block text-sm font-medium text-gray-700">First Class Price</label>
                                <div class="mt-1 relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="FirstClassPrice" type="number" step="0.01" min="0" class="focus:ring-blue-500 focus:border-blue-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="FirstClassPrice" class="text-red-500 text-xs"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-6 border-t border-gray-100">
                    <a href="@Url.Action("TripsManagement", "Partner")" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Schedule Trip
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
