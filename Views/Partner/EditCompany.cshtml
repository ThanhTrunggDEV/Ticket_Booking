@model Ticket_Booking.Models.DomainModels.Company

@{
    ViewData["Title"] = "Edit Company";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-3xl mx-auto relative z-10">
        <!-- Header -->
        <div class="mb-8 text-center">
            <div class="inline-flex items-center justify-center p-2 bg-white rounded-full shadow-lg mb-4">
                <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                </div>
            </div>
            <h1 class="text-4xl font-black text-indigo-900 tracking-tighter mb-2">UPDATE AIRLINE</h1>
            <p class="text-indigo-600 font-bold tracking-widest uppercase text-sm">Modify Partner Details</p>
        </div>

        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden relative">
            <!-- Decorative Top Bar -->
            <div class="h-2 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600"></div>

            <form asp-action="EditCompany" method="post" class="p-8 md:p-12 space-y-8">
                <input type="hidden" asp-for="Id" />
                
                <div class="space-y-6">
                    <div class="relative group">
                        <label asp-for="Name" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Company Name</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                            </div>
                            <input asp-for="Name" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 placeholder-gray-300" placeholder="Airline Name" required />
                        </div>
                        <span asp-validation-for="Name" class="text-red-500 text-xs font-bold mt-1 block"></span>
                    </div>

                    <div class="relative group">
                        <label asp-for="Contact" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Contact Information</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            </div>
                            <input asp-for="Contact" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 placeholder-gray-300" placeholder="Phone or Email" required />
                        </div>
                        <span asp-validation-for="Contact" class="text-red-500 text-xs font-bold mt-1 block"></span>
                    </div>

                    <div class="relative group">
                        <label asp-for="LogoUrl" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Logo URL</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                            </div>
                            <input asp-for="LogoUrl" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 placeholder-gray-300" placeholder="https://..." />
                        </div>
                        <span asp-validation-for="LogoUrl" class="text-red-500 text-xs font-bold mt-1 block"></span>
                    </div>
                </div>

                <div class="flex items-center justify-between pt-8 border-t border-gray-100">
                    <a href="@Url.Action("CompaniesManagement", "Partner")" class="text-gray-400 hover:text-gray-600 font-bold text-sm uppercase tracking-widest transition-colors">
                        Cancel
                    </a>
                    <button type="submit" class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-black rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1 uppercase tracking-widest text-sm flex items-center">
                        <span>Save Changes</span>
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
