@model Ticket_Booking.Models.DomainModels.Company

@{
    ViewData["Title"] = "Create Company";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="p-6 border-b border-gray-100">
                <h2 class="text-xl font-bold text-gray-900">Create New Company</h2>
                <p class="mt-1 text-sm text-gray-500">Add a new transport company to your portfolio</p>
            </div>
            
            <form asp-action="CreateCompany" method="post" class="p-6 space-y-6">
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700">Company Name</label>
                        <input asp-for="Name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                        <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Contact" class="block text-sm font-medium text-gray-700">Contact Information</label>
                        <input asp-for="Contact" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                        <span asp-validation-for="Contact" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="TransportTypeId" class="block text-sm font-medium text-gray-700">Transport Type</label>
                        <select asp-for="TransportTypeId" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                            <option value="">Select a type</option>
                            @if (ViewBag.TransportTypes != null)
                            {
                                foreach (var type in ViewBag.TransportTypes)
                                {
                                    <option value="@type.Id">@type.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="TransportTypeId" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="LogoUrl" class="block text-sm font-medium text-gray-700">Logo URL</label>
                        <input asp-for="LogoUrl" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="LogoUrl" class="text-red-500 text-xs"></span>
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-6 border-t border-gray-100">
                    <a href="@Url.Action("CompaniesManagement", "Partner")" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Create Company
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
