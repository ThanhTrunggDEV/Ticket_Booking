@model IEnumerable<Ticket_Booking.Models.DomainModels.Trip>

@{
    ViewData["Title"] = "Trips Management";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">Partner Portal</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">TRIPS MANAGEMENT</h1>
            </div>
            <div class="mt-4 md:mt-0">
                <a href="@Url.Action("CreateTrip", "Partner")" class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    SCHEDULE FLIGHT
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Right Column: Content -->
            <div class="lg:col-span-12">
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="text-lg font-black text-indigo-900 uppercase tracking-tighter">Scheduled Flights</h3>
                        <div class="flex space-x-2">
                            <input type="text" placeholder="Search flights..." class="px-4 py-2 bg-zinc-50 border border-zinc-200 rounded-lg text-sm font-mono focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                    </div>
                    
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead class="bg-zinc-50">
                                <tr>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Route</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Airline / Plane</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Schedule</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Fares</th>
                                    <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest">Status</th>
                                    <th scope="col" class="px-6 py-4 text-right text-xs font-bold text-gray-400 uppercase tracking-widest">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                @foreach (var item in Model)
                                {
                                    <tr class="hover:bg-zinc-50 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-bold text-indigo-900">
                                                @($"{item.FromCity} â†’ {item.ToCity}")
                                            </div>
                                            <div class="text-xs font-mono text-gray-500">
                                                @($"{item.Distance} km")
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-bold text-gray-900">
                                                @(item.Company != null ? item.Company.Name : "N/A")
                                            </div>
                                            <div class="text-xs font-mono text-gray-500">
                                                @item.PlaneName
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-bold text-gray-900">@item.DepartureTime.ToString("MMM dd, HH:mm")</div>
                                            <div class="text-xs text-gray-500">Arr: @item.ArrivalTime.ToString("MMM dd, HH:mm")</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="space-y-1">
                                                <div class="text-xs text-gray-900 flex justify-between w-32">
                                                    <span class="font-bold text-gray-500">ECO</span> 
                                                    <span>$@item.EconomyPrice.ToString("N0") <span class="text-gray-400">(@item.EconomySeats)</span></span>
                                                </div>
                                                @if (item.BusinessSeats > 0)
                                                {
                                                    <div class="text-xs text-indigo-900 flex justify-between w-32">
                                                        <span class="font-bold text-indigo-500">BUS</span> 
                                                        <span>$@item.BusinessPrice.ToString("N0") <span class="text-gray-400">(@item.BusinessSeats)</span></span>
                                                    </div>
                                                }
                                                @if (item.FirstClassSeats > 0)
                                                {
                                                    <div class="text-xs text-purple-900 flex justify-between w-32">
                                                        <span class="font-bold text-purple-500">1ST</span> 
                                                        <span>$@item.FirstClassPrice.ToString("N0") <span class="text-gray-400">(@item.FirstClassSeats)</span></span>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-bold rounded-full @(item.Status == Ticket_Booking.Enums.TripStatus.Active ? "bg-green-100 text-green-800" : "bg-zinc-100 text-zinc-800")">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <a href="@Url.Action("EditTrip", "Partner", new { id = item.Id })" class="text-indigo-600 hover:text-indigo-900 mr-3 font-bold">Edit</a>
                                            <form asp-action="DeleteTrip" asp-route-id="@item.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this trip?');">
                                                <button type="submit" class="text-red-400 hover:text-red-600 font-bold">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="text-center py-12">
                            <svg class="mx-auto h-16 w-16 text-gray-200 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                            </svg>
                            <h3 class="mt-2 text-lg font-black text-indigo-900">No flights scheduled</h3>
                            <p class="mt-1 text-sm font-mono text-gray-500">Get started by scheduling your first flight.</p>
                            <div class="mt-6">
                                <a href="@Url.Action("CreateTrip", "Partner")" class="inline-flex items-center px-6 py-3 border border-transparent shadow-lg text-sm font-bold rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all transform hover:-translate-y-0.5">
                                    <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                                    </svg>
                                    Schedule Flight
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
