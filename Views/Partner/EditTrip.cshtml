@model Ticket_Booking.Models.DomainModels.Trip

@{
    ViewData["Title"] = "Edit Trip";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-4xl mx-auto relative z-10">
        <!-- Header -->
        <div class="mb-8 text-center">
            <div class="inline-flex items-center justify-center p-2 bg-white rounded-full shadow-lg mb-4">
                <div class="p-3 bg-indigo-100 rounded-full text-indigo-600">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                </div>
            </div>
            <h1 class="text-4xl font-black text-indigo-900 tracking-tighter mb-2">MODIFY FLIGHT</h1>
            <p class="text-indigo-600 font-bold tracking-widest uppercase text-sm">Update Operation Details</p>
        </div>

        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden relative">
            <!-- Decorative Top Bar -->
            <div class="h-2 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600"></div>

            <!-- Ticket Cutouts -->
            <div class="absolute top-1/2 -left-3 w-6 h-12 bg-zinc-100 rounded-r-full"></div>
            <div class="absolute top-1/2 -right-3 w-6 h-12 bg-zinc-100 rounded-l-full"></div>

            <form asp-action="EditTrip" method="post" class="p-8 md:p-12 space-y-8">
                <input type="hidden" asp-for="Id" />
                
                <!-- Route Information -->
                <div class="space-y-6">
                    <h3 class="text-lg font-black text-gray-400 uppercase tracking-widest border-b border-gray-100 pb-2">Route Information</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-4">
                            <div class="relative group">
                                <label asp-for="FromCity" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Origin</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                    </div>
                                    <input asp-for="FromCity" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 placeholder-gray-300" placeholder="City Name" required />
                                </div>
                                <span asp-validation-for="FromCity" class="text-red-500 text-xs font-bold mt-1 block"></span>
                            </div>

                            <div class="relative group">
                                <label asp-for="Distance" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Distance (km)</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0121 18.382V7.618a1 1 0 01-1.447-.894L15 7m0 13V7"></path></svg>
                                    </div>
                                    <input asp-for="Distance" type="number" step="0.01" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900" required />
                                </div>
                                <span asp-validation-for="Distance" class="text-red-500 text-xs font-bold mt-1 block"></span>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="relative group">
                                <label asp-for="ToCity" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Destination</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                    </div>
                                    <input asp-for="ToCity" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 placeholder-gray-300" placeholder="City Name" required />
                                </div>
                                <span asp-validation-for="ToCity" class="text-red-500 text-xs font-bold mt-1 block"></span>
                            </div>

                            <div class="relative group">
                                <label asp-for="EstimatedDuration" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Duration (min)</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    </div>
                                    <input asp-for="EstimatedDuration" type="number" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900" required />
                                </div>
                                <span asp-validation-for="EstimatedDuration" class="text-red-500 text-xs font-bold mt-1 block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Flight Details -->
                <div class="space-y-6">
                    <h3 class="text-lg font-black text-gray-400 uppercase tracking-widest border-b border-gray-100 pb-2">Flight Details</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            <label asp-for="CompanyId" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Airline Operator</label>
                            <div class="relative">
                                <select asp-for="CompanyId" class="block w-full pl-3 pr-10 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 appearance-none" required>
                                    <option value="">Select Airline...</option>
                                    @if (ViewBag.Companies != null)
                                    {
                                        foreach (var company in ViewBag.Companies)
                                        {
                                            <option value="@company.Id">@company.Name</option>
                                        }
                                    }
                                </select>
                                <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                                </div>
                            </div>
                            <span asp-validation-for="CompanyId" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="PlaneName" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Aircraft</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                                </div>
                                <input asp-for="PlaneName" class="block w-full pl-10 pr-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900" placeholder="e.g. Boeing 737" required />
                            </div>
                            <span asp-validation-for="PlaneName" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="DepartureTime" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Departure</label>
                            <input asp-for="DepartureTime" type="datetime-local" class="block w-full px-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900" required />
                            <span asp-validation-for="DepartureTime" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="ArrivalTime" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Arrival</label>
                            <input asp-for="ArrivalTime" type="datetime-local" class="block w-full px-3 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900" required />
                            <span asp-validation-for="ArrivalTime" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>
                    </div>
                </div>

                <!-- Seat Configuration -->
                <div class="space-y-6">
                    <h3 class="text-lg font-black text-gray-400 uppercase tracking-widest border-b border-gray-100 pb-2">Cabin Configuration</h3>
                    
                    <!-- Currency Selector -->
                    <div class="bg-blue-50 rounded-2xl p-4 border-2 border-blue-100">
                        <label class="block text-xs font-bold text-blue-700 uppercase tracking-wider mb-2">Input Currency</label>
                        <select id="inputCurrency" class="block w-full md:w-48 px-4 py-2 bg-white border-2 border-blue-200 rounded-xl focus:ring-0 focus:border-blue-500 font-bold text-blue-900">
                            <option value="USD">USD ($)</option>
                            <option value="VND">VND (₫)</option>
                        </select>
                        <p class="text-xs text-blue-600 mt-2 font-medium">Select the currency you want to use when entering prices. Prices will be converted to USD for storage.</p>
                    </div>
                    
                    <!-- Economy -->
                    <div class="bg-zinc-50 rounded-2xl p-6 border-2 border-zinc-100 relative overflow-hidden group hover:border-gray-300 transition-colors">
                        <div class="absolute top-0 right-0 bg-gray-200 text-gray-600 text-xs font-bold px-3 py-1 rounded-bl-xl uppercase tracking-wider">Economy</div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="EconomySeats" class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Capacity</label>
                                <input asp-for="EconomySeats" type="number" min="0" class="block w-full px-3 py-2 bg-white border border-gray-200 rounded-lg focus:ring-0 focus:border-gray-400 font-bold text-gray-900" required />
                            </div>
                            <div>
                                <label asp-for="EconomyPrice" class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Base Fare</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span id="economyCurrencySymbol" class="text-gray-400 font-bold">$</span>
                                    </div>
                                    <input id="economyPrice" type="number" step="0.01" min="0" data-price-type="economy" class="block w-full pl-8 pr-3 py-2 bg-white border border-gray-200 rounded-lg focus:ring-0 focus:border-gray-400 font-bold text-gray-900" placeholder="0.00" required />
                                    <input type="hidden" id="economyPriceUSD" name="EconomyPrice" value="@Model.EconomyPrice.ToString("F2")" />
                                </div>
                                <p id="economyPriceConverted" class="text-xs text-gray-400 mt-1"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Business -->
                    <div class="bg-indigo-50 rounded-2xl p-6 border-2 border-indigo-100 relative overflow-hidden group hover:border-indigo-200 transition-colors">
                        <div class="absolute top-0 right-0 bg-indigo-200 text-indigo-700 text-xs font-bold px-3 py-1 rounded-bl-xl uppercase tracking-wider">Business</div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="BusinessSeats" class="block text-xs font-bold text-indigo-400 uppercase tracking-wider mb-1">Capacity</label>
                                <input asp-for="BusinessSeats" type="number" min="0" class="block w-full px-3 py-2 bg-white border border-indigo-200 rounded-lg focus:ring-0 focus:border-indigo-400 font-bold text-indigo-900" />
                            </div>
                            <div>
                                <label asp-for="BusinessPrice" class="block text-xs font-bold text-indigo-400 uppercase tracking-wider mb-1">Base Fare</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span id="businessCurrencySymbol" class="text-indigo-300 font-bold">$</span>
                                    </div>
                                    <input id="businessPrice" type="number" step="0.01" min="0" data-price-type="business" class="block w-full pl-8 pr-3 py-2 bg-white border border-indigo-200 rounded-lg focus:ring-0 focus:border-indigo-400 font-bold text-indigo-900" placeholder="0.00" />
                                    <input type="hidden" id="businessPriceUSD" name="BusinessPrice" value="@Model.BusinessPrice.ToString("F2")" />
                                </div>
                                <p id="businessPriceConverted" class="text-xs text-indigo-400 mt-1"></p>
                            </div>
                        </div>
                    </div>

                    <!-- First Class -->
                    <div class="bg-purple-50 rounded-2xl p-6 border-2 border-purple-100 relative overflow-hidden group hover:border-purple-200 transition-colors">
                        <div class="absolute top-0 right-0 bg-purple-200 text-purple-700 text-xs font-bold px-3 py-1 rounded-bl-xl uppercase tracking-wider">First Class</div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="FirstClassSeats" class="block text-xs font-bold text-purple-400 uppercase tracking-wider mb-1">Capacity</label>
                                <input asp-for="FirstClassSeats" type="number" min="0" class="block w-full px-3 py-2 bg-white border border-purple-200 rounded-lg focus:ring-0 focus:border-purple-400 font-bold text-purple-900" />
                            </div>
                            <div>
                                <label asp-for="FirstClassPrice" class="block text-xs font-bold text-purple-400 uppercase tracking-wider mb-1">Base Fare</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span id="firstClassCurrencySymbol" class="text-purple-300 font-bold">$</span>
                                    </div>
                                    <input id="firstClassPrice" type="number" step="0.01" min="0" data-price-type="firstclass" class="block w-full pl-8 pr-3 py-2 bg-white border border-purple-200 rounded-lg focus:ring-0 focus:border-purple-400 font-bold text-purple-900" placeholder="0.00" />
                                    <input type="hidden" id="firstClassPriceUSD" name="FirstClassPrice" value="@Model.FirstClassPrice.ToString("F2")" />
                                </div>
                                <p id="firstClassPriceConverted" class="text-xs text-purple-400 mt-1"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Round-Trip Pricing -->
                <div class="space-y-6">
                    <h3 class="text-lg font-black text-gray-400 uppercase tracking-widest border-b border-gray-100 pb-2">Round-Trip Pricing</h3>
                    <div class="bg-green-50 rounded-2xl p-6 border-2 border-green-100">
                        <div class="mb-4">
                            <label asp-for="RoundTripDiscountPercent" class="block text-xs font-bold text-green-700 uppercase tracking-wider mb-2">Round-Trip Discount (%)</label>
                            <div class="relative">
                                <input asp-for="RoundTripDiscountPercent" type="number" step="0.1" min="0" max="50" 
                                       class="block w-full px-4 py-3 bg-white border-2 border-green-200 rounded-xl focus:ring-0 focus:border-green-500 transition-colors font-bold text-green-900" 
                                       placeholder="0.0" />
                                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                    <span class="text-green-500 font-bold">%</span>
                                </div>
                            </div>
                            <p class="text-xs text-green-600 mt-2 font-medium">Enter discount percentage for round-trip bookings (0-50%). This discount will be applied to the total price of both outbound and return tickets.</p>
                            <span asp-validation-for="RoundTripDiscountPercent" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="space-y-6">
                    <h3 class="text-lg font-black text-gray-400 uppercase tracking-widest border-b border-gray-100 pb-2">Operational Status</h3>
                    <div>
                        <label asp-for="Status" class="block text-xs font-bold text-indigo-900 uppercase tracking-wider mb-1">Current Status</label>
                        <div class="relative">
                            <select asp-for="Status" class="block w-full pl-3 pr-10 py-3 bg-zinc-50 border-2 border-zinc-100 rounded-xl focus:ring-0 focus:border-indigo-500 transition-colors font-bold text-gray-900 appearance-none" asp-items="Html.GetEnumSelectList<Ticket_Booking.Enums.TripStatus>()">
                            </select>
                            <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </div>
                        </div>
                        <span asp-validation-for="Status" class="text-red-500 text-xs font-bold mt-1 block"></span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-8 border-t border-gray-100">
                    <a href="@Url.Action("TripsManagement", "Partner")" class="text-gray-400 hover:text-gray-600 font-bold text-sm uppercase tracking-widest transition-colors">
                        Cancel Changes
                    </a>
                    <button type="submit" class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-black rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1 uppercase tracking-widest text-sm flex items-center">
                        <span>Update Flight</span>
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Exchange rate from server
        @{
            decimal rate = ViewBag.ExchangeRate != null ? (decimal)ViewBag.ExchangeRate : 25000m;
        }
        let exchangeRate = @rate.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);
        
        const inputCurrency = document.getElementById('inputCurrency');
        const economyPrice = document.getElementById('economyPrice');
        const businessPrice = document.getElementById('businessPrice');
        const firstClassPrice = document.getElementById('firstClassPrice');
        const economyPriceUSD = document.getElementById('economyPriceUSD');
        const businessPriceUSD = document.getElementById('businessPriceUSD');
        const firstClassPriceUSD = document.getElementById('firstClassPriceUSD');
        
        const economySymbol = document.getElementById('economyCurrencySymbol');
        const businessSymbol = document.getElementById('businessCurrencySymbol');
        const firstClassSymbol = document.getElementById('firstClassCurrencySymbol');
        
        const economyConverted = document.getElementById('economyPriceConverted');
        const businessConverted = document.getElementById('businessPriceConverted');
        const firstClassConverted = document.getElementById('firstClassPriceConverted');
        
        function updateCurrencySymbols(currency) {
            if (!economySymbol || !businessSymbol || !firstClassSymbol) {
                console.error('Currency symbols not found');
                return;
            }
            const symbol = currency === 'VND' ? '₫' : '$';
            economySymbol.textContent = symbol;
            businessSymbol.textContent = symbol;
            firstClassSymbol.textContent = symbol;
            console.log('Updated currency symbols to:', symbol);
        }
        
        function convertToUSD(amount, fromCurrency) {
            if (fromCurrency === 'USD') return amount;
            return amount / exchangeRate;
        }
        
        function convertFromUSD(amount, toCurrency) {
            if (toCurrency === 'USD') return amount;
            return amount * exchangeRate;
        }
        
        function updatePriceDisplay(priceInput, priceUSDInput, convertedDisplay, currency) {
            // Get USD value from hidden input
            let usdValue = parseFloat(priceUSDInput.value);
            if (isNaN(usdValue) || usdValue < 0) {
                usdValue = 0;
            }
            
            console.log('Updating price display:', {
                priceInput: priceInput.id,
                usdValue: usdValue,
                currency: currency
            });
            
            if (currency === 'VND') {
                const vndValue = convertFromUSD(usdValue, 'VND');
                priceInput.value = vndValue > 0 ? Math.round(vndValue) : '';
                priceInput.step = '1';
                if (usdValue > 0) {
                    convertedDisplay.textContent = `≈ $${usdValue.toFixed(2)} USD`;
                } else {
                    convertedDisplay.textContent = '';
                }
            } else {
                // USD mode
                priceInput.value = usdValue > 0 ? usdValue.toFixed(2) : '';
                priceInput.step = '0.01';
                convertedDisplay.textContent = '';
            }
        }
        
        function updateAllPrices() {
            const currency = inputCurrency.value;
            updateCurrencySymbols(currency);
            updatePriceDisplay(economyPrice, economyPriceUSD, economyConverted, currency);
            updatePriceDisplay(businessPrice, businessPriceUSD, businessConverted, currency);
            updatePriceDisplay(firstClassPrice, firstClassPriceUSD, firstClassConverted, currency);
        }
        
        function syncPriceToUSD(priceInput, priceUSDInput, convertedDisplay, currency) {
            const inputValue = parseFloat(priceInput.value) || 0;
            const usdValue = convertToUSD(inputValue, currency);
            
            // Debug logging
            console.log('Syncing price to USD:', {
                inputValue: inputValue,
                currency: currency,
                exchangeRate: exchangeRate,
                usdValue: usdValue,
                calculation: currency === 'VND' ? `${inputValue} / ${exchangeRate} = ${usdValue}` : `${inputValue} (USD)`
            });
            
            priceUSDInput.value = usdValue.toFixed(2);
            
            if (currency === 'VND') {
                convertedDisplay.textContent = `≈ $${usdValue.toFixed(2)} USD`;
            } else {
                convertedDisplay.textContent = '';
            }
        }
        
        // Handle currency change
        let previousCurrency = inputCurrency.value;
        inputCurrency.addEventListener('change', function() {
            // Sync current visible values to USD using the PREVIOUS currency before changing
            syncPriceToUSD(economyPrice, economyPriceUSD, economyConverted, previousCurrency);
            syncPriceToUSD(businessPrice, businessPriceUSD, businessConverted, previousCurrency);
            syncPriceToUSD(firstClassPrice, firstClassPriceUSD, firstClassConverted, previousCurrency);
            
            // Update previous currency for next change
            previousCurrency = this.value;
            
            // Then update display for new currency
            updateAllPrices();
        });
        
        // Handle price input changes
        economyPrice.addEventListener('input', function() {
            syncPriceToUSD(economyPrice, economyPriceUSD, economyConverted, inputCurrency.value);
        });
        
        businessPrice.addEventListener('input', function() {
            syncPriceToUSD(businessPrice, businessPriceUSD, businessConverted, inputCurrency.value);
        });
        
        firstClassPrice.addEventListener('input', function() {
            syncPriceToUSD(firstClassPrice, firstClassPriceUSD, firstClassConverted, inputCurrency.value);
        });
        
        // Initialize on page load
        function initializePrices() {
            // Check if all elements exist
            if (!inputCurrency || !economyPrice || !businessPrice || !firstClassPrice || 
                !economyPriceUSD || !businessPriceUSD || !firstClassPriceUSD) {
                console.error('Some elements are missing, retrying...');
                setTimeout(initializePrices, 100);
                return;
            }
            
            // Debug: Log values to console
            console.log('Initializing prices...');
            console.log('Economy USD:', economyPriceUSD.value);
            console.log('Business USD:', businessPriceUSD.value);
            console.log('First Class USD:', firstClassPriceUSD.value);
            console.log('Exchange Rate:', exchangeRate);
            console.log('Selected Currency:', inputCurrency.value);
            
            // Update currency symbols first (this should happen immediately)
            const selectedCurrency = inputCurrency.value || 'USD';
            updateCurrencySymbols(selectedCurrency);
            
            // Then update all price displays
            updateAllPrices();
        }
        
        // Wait for DOM to be ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                setTimeout(initializePrices, 100);
            });
        } else {
            // DOM already loaded, run immediately
            setTimeout(initializePrices, 100);
        }
        
        // Ensure prices are synced before form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            // Sync all prices to USD before submitting
            syncPriceToUSD(economyPrice, economyPriceUSD, economyConverted, inputCurrency.value);
            syncPriceToUSD(businessPrice, businessPriceUSD, businessConverted, inputCurrency.value);
            syncPriceToUSD(firstClassPrice, firstClassPriceUSD, firstClassConverted, inputCurrency.value);
            
            // Disable visible inputs to prevent them from being submitted
            economyPrice.disabled = true;
            businessPrice.disabled = true;
            firstClassPrice.disabled = true;
            
            // Debug: Log values being submitted
            console.log('Form submitting with prices:');
            console.log('Economy USD:', economyPriceUSD.value, '(visible input:', economyPrice.value, ')');
            console.log('Business USD:', businessPriceUSD.value, '(visible input:', businessPrice.value, ')');
            console.log('First Class USD:', firstClassPriceUSD.value, '(visible input:', firstClassPrice.value, ')');
            console.log('Exchange Rate:', exchangeRate);
            console.log('Currency:', inputCurrency.value);
        });
    </script>
