<script>
    const form = document.getElementById('chatForm');
    const input = document.getElementById('messageInput');
    const chatWindow = document.getElementById('chatWindow');
    const conversationIdInput = document.getElementById('conversationId');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const text = input.value.trim();
        if (!text) return;

        appendUserMessage(text);
        input.value = '';

        try {
            console.log('[chat] sending message', { text });
            const response = await fetch('@Url.Action("Send", "Chat")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8'
                },
                body: new URLSearchParams({
                    message: text,
                    conversationId: conversationIdInput.value || ''
                })
            });

            if (!response.ok) {
                console.error('[chat] send failed', response.status);
                appendAiMessage('Xin l·ªói, h·ªá th·ªëng ƒëang b·∫≠n. Vui l√≤ng th·ª≠ l·∫°i sau.');
                return;
            }

            const data = await response.json();
            if (data.conversationId) {
                conversationIdInput.value = data.conversationId;
            }

            // Display AI reply
            appendAiMessage(data.reply || 'Xin l·ªói, m√¨nh kh√¥ng hi·ªÉu c√¢u h·ªèi.');
            
            // Display trips if available
            if (data.trips && data.trips.length > 0) {
                appendTrips(data.trips);
            }
        } catch (err) {
            console.error('[chat] fetch error', err);
            appendAiMessage('C√≥ l·ªói k·∫øt n·ªëi t·ªõi server. Vui l√≤ng th·ª≠ l·∫°i.');
        }
    });

    function appendUserMessage(text) {
        const wrapper = document.createElement('div');
        wrapper.className = 'flex items-start justify-end space-x-3 space-x-reverse';
        wrapper.innerHTML = `
            <div class="bg-indigo-600 text-white rounded-2xl px-4 py-2 text-sm shadow-sm max-w-xs">
                ${escapeHtml(text)}
            </div>
            <div class="w-8 h-8 rounded-full bg-zinc-300 flex items-center justify-center text-zinc-700 text-xs font-black">
                U
            </div>
        `;
        chatWindow.appendChild(wrapper);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    function appendAiMessage(text) {
        const wrapper = document.createElement('div');
        wrapper.className = 'flex items-start space-x-3';
        wrapper.innerHTML = `
            <div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center text-white text-xs font-black">
                AI
            </div>
            <div class="bg-white border border-indigo-100 rounded-2xl px-4 py-2 text-sm text-gray-800 shadow-sm max-w-xs whitespace-pre-wrap">
                ${escapeHtml(text)}
            </div>
        `;
        chatWindow.appendChild(wrapper);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    function appendTrips(trips) {
        const wrapper = document.createElement('div');
        wrapper.className = 'flex items-start space-x-3 mt-2';
        wrapper.innerHTML = `
            <div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center text-white text-xs font-black flex-shrink-0">
                AI
            </div>
            <div class="flex-1 bg-white border border-indigo-100 rounded-2xl p-4 shadow-sm max-w-2xl">
                <h3 class="text-sm font-bold text-gray-800 mb-3 flex items-center gap-2">
                    <span>üìã</span>
                    <span>C√°c chuy·∫øn bay t√¨m ƒë∆∞·ª£c (${trips.length})</span>
                </h3>
                <div class="space-y-3 max-h-96 overflow-y-auto">
                    ${trips.map((trip, index) => `
                        <div class="border border-zinc-200 rounded-xl p-3 hover:border-indigo-400 hover:shadow-md transition-all bg-gradient-to-r from-white to-zinc-50">
                            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 mb-2">
                                <div class="flex-1">
                                    <div class="text-sm font-bold text-gray-900 mb-1">
                                        ${escapeHtml(trip.fromCity)} ‚Üí ${escapeHtml(trip.toCity)}
                                    </div>
                                    <div class="text-xs text-gray-600 space-y-0.5">
                                        <div>‚è∞ ${escapeHtml(trip.departureTime)} - ${escapeHtml(trip.arrivalTime)}</div>
                                        <div>‚úàÔ∏è ${escapeHtml(trip.companyName)}</div>
                                    </div>
                                </div>
                                <a href="/User/BookTrip?tripId=${trip.id}" 
                                   class="px-4 py-2 bg-indigo-600 text-white text-xs font-bold rounded-lg hover:bg-indigo-700 transition-colors whitespace-nowrap flex-shrink-0 text-center">
                                    Book Now
                                </a>
                            </div>
                            <div class="mt-2 pt-2 border-t border-zinc-100">
                                <div class="text-xs text-gray-600 flex flex-wrap gap-x-3 gap-y-1">
                                    <span>üí∞ Economy: <strong>$${parseFloat(trip.economyPrice).toFixed(2)}</strong></span>
                                    <span>Business: <strong>$${parseFloat(trip.businessPrice).toFixed(2)}</strong></span>
                                    <span>First: <strong>$${parseFloat(trip.firstClassPrice).toFixed(2)}</strong></span>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            </div>
        `;
        chatWindow.appendChild(wrapper);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    function escapeHtml(unsafe) {
        return unsafe
            .replace(/&/g, "&amp;")
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;")
            .replace(/"/g, "&quot;")
            .replace(/'/g, "&#039;");
    }
</script>


