@model IEnumerable<Ticket_Booking.Models.DomainModels.User>
@using Ticket_Booking.Enums

@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">@Localizer["Admin.SystemAdministration"]</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">@Localizer["Admin.UserManagement"]</h1>
            </div>
            <div class="text-right mt-4 md:mt-0">
                <div class="text-xs font-bold text-gray-400 uppercase tracking-widest">@Localizer["Admin.TotalUsersCount"]</div>
                <div class="text-xl font-bold text-indigo-600">@Model.Count() @Localizer["Admin.Registered"]</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Right Column: Content -->
            <div class="lg:col-span-12">
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="text-lg font-black text-indigo-900 uppercase tracking-tighter">@Localizer["Admin.RegisteredUsers"]</h3>
                        <div class="flex space-x-2">
                            <input type="text" placeholder="@Localizer["Admin.SearchUsers"]" class="px-4 py-2 bg-zinc-50 border border-zinc-200 rounded-lg text-sm font-mono focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                    </div>
                    
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead class="bg-zinc-50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">@Localizer["Admin.UserInfo"]</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">@Localizer["Admin.Role"]</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">@Localizer["Admin.JoinedDate"]</th>
                                    <th class="px-6 py-4 text-right text-xs font-bold text-gray-400 uppercase tracking-wider">@Localizer["Admin.Actions"]</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                @foreach (var user in Model)
                                {
                                    <tr class="hover:bg-indigo-50/30 transition-colors group">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold mr-3">
                                                    @(!string.IsNullOrEmpty(user.FullName) ? user.FullName.Substring(0, 1).ToUpper() : "?")
                                                </div>
                                                <div>
                                                    <div class="text-sm font-bold text-indigo-900">@user.FullName</div>
                                                    <div class="text-xs text-gray-500 font-mono">@user.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <form asp-action="ChangeRole" method="post" class="flex items-center">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <select name="role" onchange="this.form.submit()" class="block w-full pl-3 pr-10 py-1 text-xs font-bold border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md bg-zinc-50">
                                                    @foreach (Role role in Enum.GetValues(typeof(Role)))
                                                    {
                                                        if (user.Role == role)
                                                        {
                                                            <option value="@role" selected>@role</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@role">@role</option>
                                                        }
                                                    }
                                                </select>
                                            </form>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-bold text-gray-600">@user.CreatedAt.ToString("MMM dd, yyyy")</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <form asp-action="DeleteUser" method="post" class="inline-block" onsubmit="return confirm('@Localizer["Admin.DeleteUserConfirm"]');">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="text-red-400 hover:text-red-600 font-bold uppercase text-xs tracking-wider transition-colors">
                                                    @Localizer["Admin.Delete"]
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
