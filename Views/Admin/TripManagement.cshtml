@model IEnumerable<Ticket_Booking.Models.DomainModels.Trip>
@using Ticket_Booking.Enums

@{
    ViewData["Title"] = "Trip Management";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">System Administration</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">TRIP MANAGEMENT</h1>
            </div>
            <div class="text-right mt-4 md:mt-0">
                <div class="text-xs font-bold text-gray-400 uppercase tracking-widest">Total Trips</div>
                <div class="text-xl font-bold text-indigo-600">@Model.Count() SCHEDULED</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Right Column: Content -->
            <div class="lg:col-span-12">
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="text-lg font-black text-indigo-900 uppercase tracking-tighter">Scheduled Trips</h3>
                        <div class="flex space-x-2">
                            <input type="text" placeholder="Search trips..." class="px-4 py-2 bg-zinc-50 border border-zinc-200 rounded-lg text-sm font-mono focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                    </div>
                    
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead class="bg-zinc-50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Route</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Schedule</th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-4 text-right text-xs font-bold text-gray-400 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                @foreach (var trip in Model)
                                {
                                    <tr class="hover:bg-indigo-50/30 transition-colors group">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold mr-3">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                                                </div>
                                                <div>
                                                    <div class="text-sm font-bold text-indigo-900">@trip.FromCity <span class="text-gray-400">â†’</span> @trip.ToCity</div>
                                                    <div class="text-xs text-gray-500 font-mono">@trip.PlaneName</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-bold text-gray-600">@trip.DepartureTime.ToString("MMM dd, HH:mm")</div>
                                            <div class="text-xs text-gray-400 font-mono">Duration: @trip.EstimatedDuration min</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 inline-flex text-xs leading-5 font-bold rounded-full 
                                                @(trip.Status == TripStatus.Active ? "bg-green-100 text-green-800" : 
                                                  trip.Status == TripStatus.Delayed ? "bg-yellow-100 text-yellow-800" : 
                                                  trip.Status == TripStatus.Cancelled ? "bg-red-100 text-red-800" : "bg-gray-100 text-gray-800")">
                                                @trip.Status
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <form asp-action="DeleteTrip" method="post" class="inline-block" onsubmit="return confirm('Are you sure you want to delete this trip?');">
                                                <input type="hidden" name="id" value="@trip.Id" />
                                                <button type="submit" class="text-red-400 hover:text-red-600 font-bold uppercase text-xs tracking-wider transition-colors">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
