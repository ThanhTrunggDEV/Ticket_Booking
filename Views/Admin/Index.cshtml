@model Ticket_Booking.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 p-4 md:p-8 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob"></div>
    <div class="absolute bottom-20 right-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-blob animation-delay-2000"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-end mb-8 border-b-2 border-indigo-900/10 pb-4">
            <div>
                <div class="flex items-center space-x-2 text-indigo-900 mb-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                    <span class="font-bold tracking-widest text-sm uppercase">System Administration</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-black text-indigo-900 tracking-tighter">COMMAND CENTER</h1>
            </div>
            <div class="text-right mt-4 md:mt-0">
                <div class="text-xs font-bold text-gray-400 uppercase tracking-widest">System Status</div>
                <div class="text-xl font-bold text-green-500 flex items-center justify-end gap-2">
                    <span class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></span>
                    OPERATIONAL
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <!-- Right Column: Content -->
            <div class="lg:col-span-12 space-y-8">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <!-- Total Users -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-indigo-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-indigo-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Total Users</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.TotalUsers</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-indigo-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                                <span>Registered</span>
                            </div>
                        </div>
                    </div>

                    <!-- Total Companies -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-purple-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-purple-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Companies</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.TotalCompanies</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-purple-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                                <span>Active Partners</span>
                            </div>
                        </div>
                    </div>

                    <!-- Total Trips -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-pink-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-pink-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Total Trips</div>
                            <div class="text-4xl font-black text-indigo-900">@Model.TotalTrips</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-pink-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                                <span>Scheduled</span>
                            </div>
                        </div>
                    </div>

                    <!-- Total Revenue -->
                    <div class="bg-white rounded-3xl shadow-xl p-6 relative overflow-hidden group hover:scale-[1.02] transition-transform">
                        <div class="absolute right-0 top-0 w-24 h-24 bg-emerald-50 rounded-bl-full -mr-4 -mt-4 transition-colors group-hover:bg-emerald-100"></div>
                        <div class="relative z-10">
                            <div class="text-indigo-900/50 font-bold text-xs uppercase tracking-widest mb-2">Revenue</div>
                            <div class="text-4xl font-black text-indigo-900">$@Model.TotalRevenue.ToString("N0")</div>
                            <div class="mt-4 flex items-center text-xs font-bold text-emerald-500">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                <span>Total Sales</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Overview Chart Placeholder -->
                <div class="bg-white rounded-3xl shadow-xl p-8 relative overflow-hidden">
                    <div class="flex justify-between items-center mb-8">
                        <h3 class="text-lg font-black text-indigo-900 uppercase tracking-tighter">System Activity</h3>
                        <div class="flex space-x-2">
                            <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-lg text-xs font-bold">Weekly</span>
                            <span class="px-3 py-1 bg-zinc-100 text-zinc-500 rounded-lg text-xs font-bold">Monthly</span>
                        </div>
                    </div>
                    
                    <!-- Fake Chart Bars -->
                    <div class="flex items-end justify-between h-48 gap-2">
                        @for (int i = 0; i < 12; i++)
                        {
                            var height = new Random().Next(30, 100);
                            <div class="w-full bg-indigo-50 rounded-t-lg relative group">
                                <div class="absolute bottom-0 left-0 right-0 bg-indigo-500 rounded-t-lg transition-all duration-500 group-hover:bg-indigo-600" style="height: @height%"></div>
                            </div>
                        }
                    </div>
                    <div class="flex justify-between mt-4 text-xs font-bold text-gray-400 uppercase tracking-wider">
                        <span>Jan</span><span>Feb</span><span>Mar</span><span>Apr</span><span>May</span><span>Jun</span>
                        <span>Jul</span><span>Aug</span><span>Sep</span><span>Oct</span><span>Nov</span><span>Dec</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
