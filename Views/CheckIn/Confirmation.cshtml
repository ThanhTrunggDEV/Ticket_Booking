@model Ticket_Booking.Models.DomainModels.Ticket
@{
    ViewData["Title"] = "Check-In Confirmation";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 py-8 px-4">
    <div class="max-w-3xl mx-auto">
        <!-- Success Message -->
        <div class="bg-green-50 border-l-4 border-green-500 p-6 rounded-lg mb-6">
            <div class="flex items-center">
                <svg class="w-12 h-12 text-green-500 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                    <h2 class="text-2xl font-bold text-green-800">Check-In Successful!</h2>
                    <p class="text-green-700 mt-1">Your boarding pass has been generated and sent to your email.</p>
                </div>
            </div>
        </div>

        <!-- Ticket Details Card -->
        <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Flight Details</h3>
            
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Passenger</p>
                        <p class="text-lg font-semibold">@Model.User.FullName</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">PNR Code</p>
                        <p class="text-lg font-mono font-bold">@Model.PNR</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Route</p>
                        <p class="text-lg font-semibold">@Model.Trip.FromCity â†’ @Model.Trip.ToCity</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Flight</p>
                        <p class="text-lg font-semibold">@Model.Trip.PlaneName</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Departure</p>
                        <p class="text-lg font-semibold">@Model.Trip.DepartureTime.ToString("dd MMM yyyy HH:mm")</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Arrival</p>
                        <p class="text-lg font-semibold">@Model.Trip.DepartureTime.AddMinutes(Model.Trip.EstimatedDuration).ToString("dd MMM yyyy HH:mm")</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Seat</p>
                        <p class="text-lg font-mono font-bold text-indigo-600">@Model.SeatNumber</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Seat Class</p>
                        <p class="text-lg font-semibold">@Model.SeatClass</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Boarding Information -->
        <div class="bg-blue-50 border-l-4 border-blue-500 p-6 rounded-lg mb-6">
            <h4 class="font-bold text-blue-900 mb-3">Boarding Information</h4>
            <div class="space-y-2 text-sm text-blue-800">
                <p><strong>Boarding Time:</strong> @Model.Trip.DepartureTime.AddMinutes(-45).ToString("HH:mm")</p>
                <p><strong>Gate:</strong> A04 (Please check airport displays for updates)</p>
                <p><strong>Check-In Time:</strong> @Model.CheckInTime?.ToString("dd MMM yyyy HH:mm") UTC</p>
            </div>
        </div>

        <!-- Boarding Pass Download -->
        @if (!string.IsNullOrEmpty(Model.BoardingPassUrl))
        {
            <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                <h4 class="font-bold text-gray-900 mb-4">Download Boarding Pass</h4>
                <a 
                    href="@Url.Content($"~/{Model.BoardingPassUrl}")" 
                    target="_blank"
                    class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-bold transition-all transform hover:scale-[1.02]">
                    Download PDF
                </a>
                <p class="text-sm text-gray-500 mt-2">Your boarding pass has also been sent to your email.</p>
            </div>
        }

        <!-- Important Notes -->
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 rounded-lg mb-6">
            <h4 class="font-bold text-yellow-900 mb-3">Important Reminders</h4>
            <ul class="space-y-2 text-sm text-yellow-800 list-disc list-inside">
                <li>Please arrive at the gate at least 30 minutes before departure</li>
                <li>Have your boarding pass and ID ready</li>
                <li>Gate assignments may change - check airport displays</li>
                <li>Keep your boarding pass accessible (digital or printed)</li>
            </ul>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-4">
            <a 
                href="@Url.Action("Index", "User")" 
                class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-bold text-center transition-all transform hover:scale-[1.02]">
                Back to Home
            </a>
            <a 
                href="@Url.Action("MyTickets")" 
                class="flex-1 bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-bold text-center transition-all">
                My Tickets
            </a>
        </div>
    </div>
</div>

