@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="min-h-screen bg-zinc-100 flex items-center justify-center p-4 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-10 left-10 w-24 h-24 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>

    <!-- The Ticket Container -->
    <div class="w-full max-w-5xl relative group perspective-1000">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row relative transform transition-transform duration-500 hover:rotate-1 hover:scale-[1.01]">
            
            <!-- Left Side: The "Brand" (Visuals) -->
            <div class="md:w-2/5 bg-indigo-900 p-8 text-white relative overflow-hidden flex flex-col justify-between min-h-[400px]">
                <!-- Decorative Circles (Holes) -->
                <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>
                
                <div class="z-10 relative">
                    <div class="flex items-center space-x-2 mb-6">
                        <div class="w-8 h-8 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                        </div>
                        <span class="font-bold tracking-widest text-sm">SkyBooking</span>
                    </div>
                    <h1 class="text-4xl font-black tracking-tighter leading-none opacity-90">FIRST<br>CLASS<br>ACCESS</h1>
                </div>

                <div class="z-10 my-8 relative">
                    <div class="flex items-center justify-between mb-4">
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">GUEST</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Origin</div>
                        </div>
                        <div class="flex-1 px-4 flex flex-col items-center justify-center opacity-50">
                            <svg class="w-6 h-6 transform rotate-90 mb-1" fill="currentColor" viewBox="0 0 24 24"><path d="M21,16v-2l-8-5V3.5c0-0.83-0.67-1.5-1.5-1.5S10,2.67,10,3.5V9l-8,5v2l8-2.5V19l-2,1.5V22l3.5-1l3.5,1v-1.5L13,19v-5.5L21,16z"/></svg>
                            <div class="w-full h-px bg-white/30 border-t border-dashed border-white/50"></div>
                        </div>
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">USER</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Destination</div>
                        </div>
                    </div>
                </div>

                <div class="z-10 relative">
                    <div class="flex justify-between items-end">
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Date</div>
                            <div class="text-lg font-bold">@DateTime.Now.ToString("dd MMM")</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Time</div>
                            <div class="text-lg font-bold">@DateTime.Now.ToString("HH:mm")</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Gate</div>
                            <div class="text-lg font-bold">A01</div>
                        </div>
                    </div>
                </div>

                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white/20 to-transparent"></div>
                <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-overlay filter blur-3xl opacity-50"></div>
            </div>

            <!-- Perforation Line (Visual only for desktop) -->
            <div class="hidden md:block absolute left-[40%] top-4 bottom-4 w-px border-l-2 border-dashed border-gray-300 z-20"></div>

            <!-- Right Side: The "Form" (Inputs) -->
            <div class="md:w-3/5 p-8 md:p-12 bg-white relative flex flex-col justify-center">
                <!-- Decorative Circle (Hole) -->
                <div class="hidden md:block absolute -left-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>

                <div class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 uppercase tracking-wide flex items-center">
                        <span class="w-2 h-8 bg-indigo-600 mr-3 rounded-sm"></span>
                        @Localizer["Login.PassengerLogin"]
                    </h2>
                    <p class="text-gray-400 text-xs uppercase tracking-widest mt-2 ml-5">@Localizer["Login.PresentCredentials"]</p>
                </div>

                <form asp-action="" method="post" class="space-y-8">
                    <div class="grid grid-cols-1 gap-8">
                        <div class="relative group">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">@Localizer["Login.EmailAddress"]</label>
                            <input id="email" name="email" type="email" required 
                                   class="w-full border-b-2 border-gray-200 py-2 text-xl text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="NAME@EXAMPLE.COM">
                        </div>
                        
                        <div class="relative group">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">@Localizer["Login.Password"]</label>
                            <input id="password" name="password" type="password" required 
                                   class="w-full border-b-2 border-gray-200 py-2 text-xl text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="••••••••">
                        </div>
                    </div>

                    <div class="flex items-center justify-between pt-4">
                        <label class="flex items-center space-x-3 cursor-pointer group">
                            <div class="w-5 h-5 border-2 border-gray-300 rounded flex items-center justify-center group-hover:border-indigo-600 transition-colors">
                                <input type="checkbox" class="opacity-0 absolute w-5 h-5 cursor-pointer peer">
                                <svg class="w-3 h-3 text-indigo-600 opacity-0 peer-checked:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20"><path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/></svg>
                            </div>
                            <span class="text-xs uppercase tracking-wider text-gray-500 group-hover:text-gray-700">@Localizer["Login.RememberMe"]</span>
                        </label>
                        <a href="/ForgotPassword" class="text-xs uppercase tracking-wider text-indigo-600 hover:text-indigo-800 font-bold">@Localizer["Login.LostTicket"]</a>
                    </div>

                    <!-- Barcode / Button Area -->
                    <div class="mt-8 flex flex-col sm:flex-row items-center justify-between gap-6 border-t border-gray-100 pt-8">
                        <div class="hidden sm:block opacity-40 hover:opacity-60 transition-opacity">
                            <!-- CSS Barcode -->
                            <div class="flex h-12 items-stretch space-x-[2px]">
                                <div class="w-1 bg-black"></div><div class="w-2 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-3 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-1 bg-black"></div><div class="w-4 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-2 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-3 bg-black"></div>
                            </div>
                            <div class="text-[10px] tracking-[0.5em] mt-1 text-center w-full">839201</div>
                        </div>
                        
                        <button type="submit" 
                                class="w-full sm:w-auto bg-indigo-900 text-white px-10 py-4 rounded-xl font-bold uppercase tracking-widest hover:bg-indigo-800 transition-all transform hover:translate-x-1 hover:shadow-xl flex items-center justify-center space-x-2 group">
                            <span>@Localizer["Login.BoardNow"]</span>
                            <svg class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                        </button>
                    </div>
                </form>

                <div class="mt-6 text-center sm:text-right">
                    <p class="text-gray-400 text-xs uppercase tracking-widest">
                        @Localizer["Login.NewPassenger"] 
                        <a href="/SignUp" class="text-indigo-600 font-bold hover:text-indigo-800 ml-1">@Localizer["Login.Register"]</a>
                    </p>
                </div>
                
                <!-- Social Login (Stamps) -->
                <div class="absolute top-8 right-8 flex space-x-2">
                    <button class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-indigo-600 hover:border-indigo-600 transition-all transform hover:rotate-12" title="Google">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/></svg>
                    </button>
                    <button class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-blue-600 hover:border-blue-600 transition-all transform hover:-rotate-12" title="Facebook">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="absolute bottom-4 text-center w-full text-[10px] uppercase tracking-[0.3em] text-gray-400 opacity-50">
        @Localizer["Common.Copyright"] &copy; @DateTime.Now.Year
    </div>
</div>

<style>
    @@keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    .perspective-1000 {
        perspective: 1000px;
    }
</style>
