@{
    ViewData["Title"] = "Account Recovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            let currentEmail = '';
            let otpVerified = false;

            // --- Stage 1: Send OTP ---
            $('#emailForm').submit(function (e) {
                e.preventDefault();
                const email = $('#email').val();
                const btn = $('#send-otp-btn');
                
                // Loading state
                btn.prop('disabled', true).html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');

                $.ajax({
                    url: '/Login/SendForgotPasswordOtp',
                    type: 'POST',
                    data: { email: email },
                    success: function (response) {
                        currentEmail = email;
                        $('#stage-email').addClass('hidden');
                        $('#stage-otp').removeClass('hidden');
                        $('#display-email').text(email);
                        startResendTimer();
                        
                        // Focus first OTP input
                        setTimeout(() => $('#otp-1').focus(), 100);
                    },
                    error: function (xhr) {
                        $('#email-error').text(xhr.responseText || 'Failed to send OTP. Please check your email.');
                        btn.prop('disabled', false).html('<span>SEND VERIFICATION CODE</span><svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>');
                    }
                });
            });

            // --- Stage 2: Verify OTP ---
            // OTP Input Logic (Same as SignUp)
            $('.otp-input').on('input', function (e) {
                const input = $(this);
                const value = input.val();
                if (!/^\d*$/.test(value)) { input.val(''); return; }
                if (value.length === 1) { input.next('.otp-input').focus(); }
                checkOTPComplete();
            });

            $('.otp-input').on('keydown', function (e) {
                if (e.key === 'Backspace' && $(this).val() === '') {
                    $(this).prev('.otp-input').focus();
                }
            });
            
            $('#otp-1').on('paste', function (e) {
                e.preventDefault();
                const pastedData = e.originalEvent.clipboardData.getData('text');
                const otpDigits = pastedData.replace(/\D/g, '').slice(0, 6);
                $('.otp-input').each(function (index) {
                    if (otpDigits[index]) $(this).val(otpDigits[index]);
                });
                checkOTPComplete();
            });

            function checkOTPComplete() {
                let otp = '';
                $('.otp-input').each(function () { otp += $(this).val(); });
                if (otp.length === 6) {
                    $('#verify-otp-btn').prop('disabled', false).removeClass('opacity-50 cursor-not-allowed');
                } else {
                    $('#verify-otp-btn').prop('disabled', true).addClass('opacity-50 cursor-not-allowed');
                }
            }

            $('#otpForm').submit(function (e) {
                e.preventDefault();
                let otp = '';
                $('.otp-input').each(function () { otp += $(this).val(); });
                const btn = $('#verify-otp-btn');

                btn.prop('disabled', true).html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');

                $.ajax({
                    url: '/Login/VerifyForgotPasswordOtp',
                    type: 'POST',
                    data: { email: currentEmail, otp: otp },
                    success: function (response) {
                        otpVerified = true;
                        $('#stage-otp').addClass('hidden');
                        $('#stage-reset').removeClass('hidden');
                    },
                    error: function (xhr) {
                        $('#otp-error').text('Invalid OTP. Please try again.');
                        btn.prop('disabled', false).text('VERIFY IDENTITY');
                    }
                });
            });

            // Resend Timer Logic
            let resendTimer = 60;
            function startResendTimer() {
                resendTimer = 60;
                $('#resend-btn').prop('disabled', true).addClass('opacity-50 cursor-not-allowed');
                $('#timer-text').removeClass('hidden');
                
                const interval = setInterval(function () {
                    resendTimer--;
                    $('#resend-timer').text(resendTimer);
                    if (resendTimer <= 0) {
                        clearInterval(interval);
                        $('#resend-btn').prop('disabled', false).removeClass('opacity-50 cursor-not-allowed');
                        $('#timer-text').addClass('hidden');
                    }
                }, 1000);
            }

            $('#resend-btn').click(function () {
                if (resendTimer > 0) return;
                
                $.ajax({
                    url: '/Login/SendForgotPasswordOtp',
                    type: 'POST',
                    data: { email: currentEmail },
                    success: function () {
                        startResendTimer();
                        $('#otp-success').text('OTP resent successfully!').removeClass('hidden');
                        setTimeout(() => $('#otp-success').addClass('hidden'), 3000);
                    }
                });
            });

            // --- Stage 3: Reset Password ---
            $('#resetForm').submit(function (e) {
                e.preventDefault();
                const password = $('#password').val();
                const confirmPassword = $('#confirm-password').val();
                
                if (password !== confirmPassword) {
                    $('#reset-error').text('Passwords do not match.');
                    return;
                }

                const btn = $('#reset-btn');
                btn.prop('disabled', true).html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');

                $.ajax({
                    url: '/Login/ResetPassword',
                    type: 'POST',
                    data: { email: currentEmail, newPassword: password },
                    success: function () {
                        $('#stage-reset').addClass('hidden');
                        $('#stage-success').removeClass('hidden');
                        setTimeout(() => window.location.href = '/Login', 2000);
                    },
                    error: function (xhr) {
                        $('#reset-error').text(xhr.responseText || 'Failed to reset password.');
                        btn.prop('disabled', false).text('UPDATE CREDENTIALS');
                    }
                });
            });
        });
    </script>
}

<div class="min-h-screen bg-zinc-100 flex items-center justify-center p-4 font-sans">
    <div class="max-w-4xl w-full mx-auto relative perspective-1000">
        <!-- Ticket Container -->
        <div class="bg-white rounded-[2rem] shadow-2xl overflow-hidden flex flex-col md:flex-row relative transform transition-all hover:rotate-y-1 duration-500">
            
            <!-- Left Section: Main Content -->
            <div class="flex-1 p-8 md:p-12 relative z-10">
                <!-- Header -->
                <div class="flex justify-between items-start mb-10">
                    <div>
                        <h1 class="text-4xl font-black text-zinc-900 tracking-tighter mb-2">ACCOUNT RECOVERY</h1>
                        <p class="text-zinc-500 font-mono text-sm tracking-widest uppercase">RESTORE ACCESS // TICKET #REC-@DateTime.Now.ToString("fff")</p>
                    </div>
                    <div class="hidden sm:block">
                        <div class="w-12 h-12 rounded-full bg-zinc-900 flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Stage 1: Email Input -->
                <div id="stage-email" class="transition-all duration-300">
                    <form id="emailForm" class="space-y-6">
                        <div class="bg-zinc-50 p-6 rounded-2xl border border-zinc-200">
                            <p class="text-zinc-600 mb-6 font-mono text-sm">PLEASE ENTER YOUR REGISTERED EMAIL ADDRESS TO INITIATE PASSWORD RESET PROTOCOL.</p>
                            
                            <div class="space-y-2">
                                <label for="email" class="block text-xs font-bold text-zinc-400 uppercase tracking-wider">Email Address</label>
                                <input id="email" type="email" required 
                                    class="w-full bg-white border-b-2 border-zinc-200 px-4 py-3 text-zinc-900 font-mono focus:outline-none focus:border-zinc-900 transition-colors" 
                                    placeholder="passenger@example.com">
                            </div>
                            <p id="email-error" class="mt-2 text-xs text-red-500 font-mono"></p>
                        </div>

                        <button type="submit" id="send-otp-btn" class="w-full bg-zinc-900 text-white py-4 rounded-xl font-bold tracking-widest hover:bg-zinc-800 transition-all transform hover:scale-[1.01] shadow-lg flex items-center justify-center gap-2 group">
                            <span>SEND VERIFICATION CODE</span>
                            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                            </svg>
                        </button>
                    </form>
                </div>

                <!-- Stage 2: OTP Verification -->
                <div id="stage-otp" class="hidden transition-all duration-300">
                    <form id="otpForm" class="space-y-6">
                        <div class="bg-zinc-50 p-6 rounded-2xl border border-zinc-200 text-center">
                            <p class="text-xs font-bold text-zinc-400 uppercase tracking-wider mb-2">VERIFICATION CODE SENT TO</p>
                            <p id="display-email" class="text-zinc-900 font-mono font-bold mb-6"></p>
                            
                            <div class="flex justify-center gap-2 mb-4">
                                @for (int i = 1; i <= 6; i++)
                                {
                                    <input type="text" id="otp-@i" maxlength="1" 
                                        class="otp-input w-10 h-14 sm:w-12 sm:h-16 text-center text-2xl font-mono font-bold bg-white border-2 border-zinc-200 rounded-lg focus:border-zinc-900 focus:ring-0 transition-all" 
                                        autocomplete="off">
                                }
                            </div>
                            <p id="otp-error" class="text-xs text-red-500 font-mono min-h-[1.5em]"></p>
                            <p id="otp-success" class="text-xs text-green-600 font-mono hidden"></p>
                        </div>

                        <button type="submit" id="verify-otp-btn" disabled class="w-full bg-zinc-900 text-white py-4 rounded-xl font-bold tracking-widest hover:bg-zinc-800 transition-all transform hover:scale-[1.01] shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                            VERIFY IDENTITY
                        </button>

                        <div class="text-center flex justify-between items-center px-2">
                            <button type="button" id="resend-btn" disabled class="text-xs font-bold text-zinc-900 hover:text-zinc-600 disabled:opacity-30 disabled:cursor-not-allowed uppercase tracking-wider">
                                Resend Code
                            </button>
                            <span id="timer-text" class="text-xs font-mono text-zinc-400">WAIT: <span id="resend-timer">60</span>s</span>
                        </div>
                    </form>
                </div>

                <!-- Stage 3: Reset Password -->
                <div id="stage-reset" class="hidden transition-all duration-300">
                    <form id="resetForm" class="space-y-6">
                        <div class="bg-zinc-50 p-6 rounded-2xl border border-zinc-200">
                            <p class="text-zinc-600 mb-6 font-mono text-sm">IDENTITY VERIFIED. PLEASE SET NEW CREDENTIALS.</p>
                            
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-xs font-bold text-zinc-400 uppercase tracking-wider mb-1">New Password</label>
                                    <input id="password" type="password" required 
                                        class="w-full bg-white border-b-2 border-zinc-200 px-4 py-3 text-zinc-900 font-mono focus:outline-none focus:border-zinc-900 transition-colors" 
                                        placeholder="••••••••">
                                </div>
                                <div>
                                    <label class="block text-xs font-bold text-zinc-400 uppercase tracking-wider mb-1">Confirm Password</label>
                                    <input id="confirm-password" type="password" required 
                                        class="w-full bg-white border-b-2 border-zinc-200 px-4 py-3 text-zinc-900 font-mono focus:outline-none focus:border-zinc-900 transition-colors" 
                                        placeholder="••••••••">
                                </div>
                            </div>
                            <p id="reset-error" class="mt-4 text-xs text-red-500 font-mono"></p>
                        </div>

                        <button type="submit" id="reset-btn" class="w-full bg-zinc-900 text-white py-4 rounded-xl font-bold tracking-widest hover:bg-zinc-800 transition-all transform hover:scale-[1.01] shadow-lg">
                            UPDATE CREDENTIALS
                        </button>
                    </form>
                </div>

                <!-- Stage 4: Success -->
                <div id="stage-success" class="hidden text-center py-12">
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-black text-zinc-900 mb-2">ACCESS RESTORED</h3>
                    <p class="text-zinc-500 font-mono mb-8">REDIRECTING TO LOGIN PORTAL...</p>
                    <div class="w-full bg-zinc-100 h-1 rounded-full overflow-hidden">
                        <div class="h-full bg-zinc-900 animate-[loading_2s_ease-in-out]"></div>
                    </div>
                </div>

                <!-- Footer Links -->
                <div class="mt-8 flex justify-center">
                    <a href="/Login" class="text-xs font-bold text-zinc-400 hover:text-zinc-900 uppercase tracking-widest transition-colors">
                        ← Return to Login
                    </a>
                </div>
            </div>

            <!-- Right Section: Decorative Stub -->
            <div class="relative hidden md:flex w-80 bg-zinc-50 border-l-2 border-dashed border-zinc-300 flex-col items-center justify-between p-8">
                <!-- Cutout Circles -->
                <div class="absolute -left-4 top-0 w-8 h-8 bg-zinc-100 rounded-full"></div>
                <div class="absolute -left-4 bottom-0 w-8 h-8 bg-zinc-100 rounded-full"></div>

                <div class="text-center w-full">
                    <div class="text-6xl font-black text-zinc-200 mb-2">REC</div>
                    <div class="text-xs font-bold text-zinc-400 uppercase tracking-widest">RECOVERY MODE</div>
                </div>

                <div class="w-full space-y-6">
                    <div class="flex justify-between text-xs font-mono">
                        <span class="text-zinc-400">DATE</span>
                        <span class="text-zinc-900 font-bold">@DateTime.Now.ToString("dd MMM")</span>
                    </div>
                    <div class="flex justify-between text-xs font-mono">
                        <span class="text-zinc-400">GATE</span>
                        <span class="text-zinc-900 font-bold">01</span>
                    </div>
                    <div class="flex justify-between text-xs font-mono">
                        <span class="text-zinc-400">CLASS</span>
                        <span class="text-zinc-900 font-bold">FIRST</span>
                    </div>
                </div>

                <div class="w-32 h-32 bg-white p-2 rounded-lg shadow-sm">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=Recovery" alt="QR Code" class="w-full h-full opacity-80">
                </div>

                <div class="w-full">
                    <div class="h-12 bg-zinc-900 mask-barcode opacity-20"></div>
                    <p class="text-[10px] text-center font-mono text-zinc-400 mt-1">SECURE // ENCRYPTED</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .mask-barcode {
        background-image: repeating-linear-gradient(90deg, transparent, transparent 2px, black 2px, black 4px);
    }
    @@keyframes loading {
        0% { width: 0%; }
        100% { width: 100%; }
    }
</style>
