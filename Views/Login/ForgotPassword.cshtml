@{
    ViewData["Title"] = "Account Recovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            let currentEmail = '';
            let otpVerified = false;

            // --- Stage 1: Send OTP ---
            $('#emailForm').submit(function (e) {
                e.preventDefault();
                const email = $('#email').val();
                const btn = $('#send-otp-btn');
                
                // Loading state
                btn.prop('disabled', true).html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');

                $.ajax({
                    url: '/Login/SendForgotPasswordOtp',
                    type: 'POST',
                    data: { email: email },
                    success: function (response) {
                        currentEmail = email;
                        $('#stage-email').addClass('hidden');
                        $('#stage-otp').removeClass('hidden');
                        $('#display-email').text(email);
                        startResendTimer();
                        
                        // Focus first OTP input
                        setTimeout(() => $('#otp-1').focus(), 100);
                    },
                    error: function (xhr) {
                        $('#email-error').text(xhr.responseText || 'Failed to send OTP. Please check your email.');
                        btn.prop('disabled', false).html('<span>SEND VERIFICATION CODE</span><svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>');
                    }
                });
            });

            // --- Stage 2: Verify OTP ---
            // OTP Input Logic (Same as SignUp)
            $('.otp-input').on('input', function (e) {
                const input = $(this);
                const value = input.val();
                if (!/^\d*$/.test(value)) { input.val(''); return; }
                if (value.length === 1) { input.next('.otp-input').focus(); }
                checkOTPComplete();
            });

            $('.otp-input').on('keydown', function (e) {
                if (e.key === 'Backspace' && $(this).val() === '') {
                    $(this).prev('.otp-input').focus();
                }
            });
            
            $('#otp-1').on('paste', function (e) {
                e.preventDefault();
                const pastedData = e.originalEvent.clipboardData.getData('text');
                const otpDigits = pastedData.replace(/\D/g, '').slice(0, 6);
                $('.otp-input').each(function (index) {
                    if (otpDigits[index]) $(this).val(otpDigits[index]);
                });
                checkOTPComplete();
            });

            function checkOTPComplete() {
                let otp = '';
                $('.otp-input').each(function () { otp += $(this).val(); });
                if (otp.length === 6) {
                    $('#verify-otp-btn').prop('disabled', false).removeClass('opacity-50 cursor-not-allowed');
                } else {
                    $('#verify-otp-btn').prop('disabled', true).addClass('opacity-50 cursor-not-allowed');
                }
            }

            $('#otpForm').submit(function (e) {
                e.preventDefault();
                let otp = '';
                $('.otp-input').each(function () { otp += $(this).val(); });
                const btn = $('#verify-otp-btn');

                btn.prop('disabled', true).html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');

                $.ajax({
                    url: '/Login/VerifyForgotPasswordOtp',
                    type: 'POST',
                    data: { email: currentEmail, otp: otp },
                    success: function (response) {
                        otpVerified = true;
                        $('#stage-otp').addClass('hidden');
                        $('#stage-reset').removeClass('hidden');
                    },
                    error: function (xhr) {
                        $('#otp-error').text('Invalid OTP. Please try again.');
                        btn.prop('disabled', false).text('VERIFY IDENTITY');
                    }
                });
            });

            // Resend Timer Logic
            let resendTimer = 60;
            function startResendTimer() {
                resendTimer = 60;
                $('#resend-btn').prop('disabled', true).addClass('opacity-50 cursor-not-allowed');
                $('#timer-text').removeClass('hidden');
                
                const interval = setInterval(function () {
                    resendTimer--;
                    $('#resend-timer').text(resendTimer);
                    if (resendTimer <= 0) {
                        clearInterval(interval);
                        $('#resend-btn').prop('disabled', false).removeClass('opacity-50 cursor-not-allowed');
                        $('#timer-text').addClass('hidden');
                    }
                }, 1000);
            }

            $('#resend-btn').click(function () {
                if (resendTimer > 0) return;
                
                $.ajax({
                    url: '/Login/SendForgotPasswordOtp',
                    type: 'POST',
                    data: { email: currentEmail },
                    success: function () {
                        startResendTimer();
                        $('#otp-success').text('OTP resent successfully!').removeClass('hidden');
                        setTimeout(() => $('#otp-success').addClass('hidden'), 3000);
                    }
                });
            });

            // --- Stage 3: Reset Password ---
            $('#resetForm').submit(function (e) {
                e.preventDefault();
                const password = $('#password').val();
                const confirmPassword = $('#confirm-password').val();
                
                if (password !== confirmPassword) {
                    $('#reset-error').text('Passwords do not match.');
                    return;
                }

                const btn = $('#reset-btn');
                btn.prop('disabled', true).html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');

                $.ajax({
                    url: '/Login/ResetPassword',
                    type: 'POST',
                    data: { email: currentEmail, newPassword: password },
                    success: function () {
                        $('#stage-reset').addClass('hidden');
                        $('#stage-success').removeClass('hidden');
                        setTimeout(() => window.location.href = '/Login', 2000);
                    },
                    error: function (xhr) {
                        $('#reset-error').text(xhr.responseText || 'Failed to reset password.');
                        btn.prop('disabled', false).text('UPDATE CREDENTIALS');
                    }
                });
            });
        });
    </script>
}

<div class="min-h-screen bg-zinc-100 flex items-center justify-center p-4 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-10 left-10 w-24 h-24 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>

    <!-- The Ticket Container -->
    <div class="w-full max-w-5xl relative group perspective-1000">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row relative transform transition-transform duration-500 hover:rotate-1 hover:scale-[1.01]">
            
            <!-- Left Side: The "Brand" (Visuals) -->
            <div class="md:w-2/5 bg-indigo-900 p-8 text-white relative overflow-hidden flex flex-col justify-between min-h-[400px]">
                <!-- Decorative Circles (Holes) -->
                <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>
                
                <div class="z-10 relative">
                    <div class="flex items-center space-x-2 mb-6">
                        <div class="w-8 h-8 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                        </div>
                        <span class="font-bold tracking-widest text-sm">TICKET_BOOKING</span>
                    </div>
                    <h1 class="text-4xl font-black tracking-tighter leading-none opacity-90">ACCOUNT<br>RECOVERY<br>ACCESS</h1>
                </div>

                <div class="z-10 my-8 relative">
                    <div class="flex items-center justify-between mb-4">
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">LOST</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Status</div>
                        </div>
                        <div class="flex-1 px-4 flex flex-col items-center justify-center opacity-50">
                            <svg class="w-6 h-6 transform rotate-90 mb-1" fill="currentColor" viewBox="0 0 24 24"><path d="M21,16v-2l-8-5V3.5c0-0.83-0.67-1.5-1.5-1.5S10,2.67,10,3.5V9l-8,5v2l8-2.5V19l-2,1.5V22l3.5-1l3.5,1v-1.5L13,19v-5.5L21,16z"/></svg>
                            <div class="w-full h-px bg-white/30 border-t border-dashed border-white/50"></div>
                        </div>
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">FOUND</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Target</div>
                        </div>
                    </div>
                </div>

                <div class="z-10 relative">
                    <div class="flex justify-between items-end">
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Date</div>
                            <div class="text-lg font-bold">@DateTime.Now.ToString("dd MMM")</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Class</div>
                            <div class="text-lg font-bold">PRIORITY</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Gate</div>
                            <div class="text-lg font-bold">01</div>
                        </div>
                    </div>
                </div>

                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
            </div>

            <!-- Right Side: The Form -->
            <div class="md:w-3/5 bg-white p-8 md:p-12 relative">
                <!-- Decorative Circles (Holes) -->
                <div class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>

                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-900 tracking-tight">RESTORE ACCESS</h2>
                    <p class="text-gray-400 text-sm mt-1">Please complete the verification process below.</p>
                </div>

                <!-- Stage 1: Email Input -->
                <div id="stage-email" class="transition-all duration-300">
                    <form id="emailForm" class="space-y-6">
                        <div class="space-y-2">
                            <label for="email" class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Email Address</label>
                            <input id="email" type="email" required 
                                class="w-full border-b-2 border-gray-200 py-2 text-xl text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight" 
                                placeholder="passenger@example.com">
                        </div>
                        <p id="email-error" class="mt-2 text-xs text-red-500 font-mono"></p>

                        <button type="submit" id="send-otp-btn" class="w-full bg-indigo-900 text-white px-10 py-4 rounded-xl font-bold uppercase tracking-widest hover:bg-indigo-800 transition-all transform hover:translate-x-1 hover:shadow-xl flex items-center justify-center space-x-2 group">
                            <span>SEND VERIFICATION CODE</span>
                            <svg class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                            </svg>
                        </button>
                    </form>
                </div>

                <!-- Stage 2: OTP Verification -->
                <div id="stage-otp" class="hidden transition-all duration-300">
                    <form id="otpForm" class="space-y-6">
                        <div class="text-center mb-6">
                            <p class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">VERIFICATION CODE SENT TO</p>
                            <p id="display-email" class="text-indigo-900 font-mono font-bold text-lg"></p>
                        </div>
                            
                        <div class="flex justify-center gap-2 mb-6">
                            @for (int i = 1; i <= 6; i++)
                            {
                                <input type="text" id="otp-@i" maxlength="1" 
                                    class="otp-input w-10 h-14 sm:w-12 sm:h-16 text-center text-2xl font-mono font-bold bg-white border-2 border-gray-200 rounded-lg focus:border-indigo-900 focus:ring-0 transition-all" 
                                    autocomplete="off">
                            }
                        </div>
                        <p id="otp-error" class="text-xs text-red-500 font-mono text-center min-h-[1.5em]"></p>
                        <p id="otp-success" class="text-xs text-green-600 font-mono text-center hidden"></p>

                        <button type="submit" id="verify-otp-btn" disabled class="w-full bg-indigo-900 text-white px-10 py-4 rounded-xl font-bold uppercase tracking-widest hover:bg-indigo-800 transition-all transform hover:translate-x-1 hover:shadow-xl flex items-center justify-center space-x-2 group disabled:opacity-50 disabled:cursor-not-allowed">
                            <span>VERIFY IDENTITY</span>
                        </button>

                        <div class="text-center flex justify-between items-center px-2 mt-4">
                            <button type="button" id="resend-btn" disabled class="text-xs font-bold text-indigo-900 hover:text-indigo-600 disabled:opacity-30 disabled:cursor-not-allowed uppercase tracking-wider">
                                Resend Code
                            </button>
                            <span id="timer-text" class="text-xs font-mono text-gray-400">WAIT: <span id="resend-timer">60</span>s</span>
                        </div>
                    </form>
                </div>

                <!-- Stage 3: Reset Password -->
                <div id="stage-reset" class="hidden transition-all duration-300">
                    <form id="resetForm" class="space-y-6">
                        <div class="space-y-6">
                            <div>
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-1">New Password</label>
                                <input id="password" type="password" required 
                                    class="w-full border-b-2 border-gray-200 py-2 text-xl text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight" 
                                    placeholder="••••••••">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-1">Confirm Password</label>
                                <input id="confirm-password" type="password" required 
                                    class="w-full border-b-2 border-gray-200 py-2 text-xl text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight" 
                                    placeholder="••••••••">
                            </div>
                        </div>
                        <p id="reset-error" class="mt-4 text-xs text-red-500 font-mono"></p>

                        <button type="submit" id="reset-btn" class="w-full bg-indigo-900 text-white px-10 py-4 rounded-xl font-bold uppercase tracking-widest hover:bg-indigo-800 transition-all transform hover:translate-x-1 hover:shadow-xl flex items-center justify-center space-x-2 group">
                            <span>UPDATE CREDENTIALS</span>
                        </button>
                    </form>
                </div>

                <!-- Stage 4: Success -->
                <div id="stage-success" class="hidden text-center py-12">
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-black text-indigo-900 mb-2">ACCESS RESTORED</h3>
                    <p class="text-gray-500 font-mono mb-8">REDIRECTING TO LOGIN PORTAL...</p>
                    <div class="w-full bg-gray-100 h-1 rounded-full overflow-hidden">
                        <div class="h-full bg-indigo-900 animate-[loading_2s_ease-in-out]"></div>
                    </div>
                </div>

                <!-- Footer Links -->
                <div class="mt-8 text-center">
                    <a href="/Login" class="text-xs font-bold text-gray-400 hover:text-indigo-900 uppercase tracking-widest transition-colors">
                        ← Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes loading {
        0% { width: 0%; }
        100% { width: 100%; }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    @@keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
</style>
