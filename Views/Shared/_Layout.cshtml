<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticket Booking</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="min-h-screen flex flex-col">
        <!-- Navigation Bar -->
        <nav class="bg-indigo-900 text-white shadow-lg z-50 relative border-b border-indigo-800">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">
                    <!-- Logo -->
                    <a asp-controller="User" asp-action="Index" class="flex-shrink-0 flex items-center gap-2 group">
                        <div class="bg-indigo-800 p-1.5 rounded-lg group-hover:bg-indigo-700 transition-colors">
                            <svg class="w-6 h-6 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                        </div>
                        <span class="font-black tracking-tighter text-xl">SKY<span class="text-indigo-400">BOOKING</span></span>
                    </a>
                    
                    <!-- Desktop Menu -->
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        var userRole = Context.Session.GetString("UserRole");

                        <div class="hidden md:block">
                            <div class="ml-10 flex items-baseline space-x-1">
                                @if (userRole == "Admin")
                                {
                                    <a asp-controller="Admin" asp-action="Index" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.Dashboard"]
                                    </a>
                                    <a asp-controller="Admin" asp-action="UserManagement" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "UserManagement" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.Users"]
                                    </a>
                                    <a asp-controller="Admin" asp-action="PartnerManagement" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "PartnerManagement" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.Partners"]
                                    </a>
                                    <a asp-controller="Admin" asp-action="TripManagement" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "TripManagement" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.Trips"]
                                    </a>
                                }
                                else if (userRole == "Partner")
                                {
                                    <a asp-controller="Partner" asp-action="Index" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Partner" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.Dashboard"]
                                    </a>
                                    <a asp-controller="Partner" asp-action="CompaniesManagement" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "CompaniesManagement" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.MyCompanies"]
                                    </a>
                                    <a asp-controller="Partner" asp-action="TripsManagement" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "TripsManagement" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.MyTrips"]
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="Index" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.FindFlights"]
                                    </a>
                                    <a asp-controller="User" asp-action="Profile" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.MyProfile"]
                                    </a>
                                    <a asp-controller="User" asp-action="MyBooking" class="px-4 py-2 rounded-lg text-sm font-bold hover:bg-indigo-800 transition-all hover:text-white @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyBooking" ? "bg-indigo-800 text-white" : "text-indigo-200")">
                                        @Localizer["Nav.MyBookings"]
                                    </a>
                                }
                            </div>
                        </div>

                        <!-- User Menu / Logout -->
                        <div class="hidden md:block">
                            <div class="ml-4 flex items-center md:ml-6 gap-4">
                                <!-- Language Switcher -->
                                @await Html.PartialAsync("_LanguageSwitcher")
                                <div class="h-6 w-px bg-indigo-800"></div>
                                <!-- Currency Switcher -->
                                @await Html.PartialAsync("_CurrencySwitcher")
                                <div class="h-6 w-px bg-indigo-800"></div>
                                <a asp-controller="Login" asp-action="Logout" class="flex items-center gap-2 text-indigo-300 hover:text-white text-xs font-bold uppercase tracking-widest transition-colors group">
                                    <span>@Localizer["Nav.Logout"]</span>
                                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Language and Currency Switchers for non-logged in users -->
                        <div class="hidden md:block">
                            <div class="flex items-center gap-4">
                                @await Html.PartialAsync("_LanguageSwitcher")
                                <div class="h-6 w-px bg-indigo-800"></div>
                                @await Html.PartialAsync("_CurrencySwitcher")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>

        @RenderBody()
    </div>

    <!-- AI Chat Widget (Cockpit MFD Theme) -->
    <div id="ai-chat-widget" class="fixed bottom-8 right-8 z-50 flex flex-col items-end space-y-6 font-mono perspective-1000">
        
        <!-- Chat Window (Multifunction Display) -->
        <div id="chat-window" class="hidden w-80 md:w-96 h-[600px] bg-zinc-900/95 backdrop-blur-xl border-2 border-indigo-500/50 flex flex-col transition-all duration-500 transform origin-bottom-right scale-0 opacity-0 shadow-[0_0_50px_rgba(99,102,241,0.25)] relative overflow-hidden rounded-3xl group">
            
            <!-- Screen Glare & Scanlines -->
            <div class="absolute inset-0 bg-[linear-gradient(rgba(16,185,129,0.03)_1px,transparent_1px)] bg-[size:100%_3px] pointer-events-none z-20"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent pointer-events-none z-20 rounded-3xl"></div>

            <!-- Radar Background -->
            <div class="absolute inset-0 opacity-20 pointer-events-none overflow-hidden">
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] border border-indigo-500/20 rounded-full"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] border border-indigo-500/20 rounded-full"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[200px] h-[200px] border border-indigo-500/20 rounded-full"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-1 bg-indigo-500/20"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-1 h-full bg-indigo-500/20"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] bg-gradient-to-r from-transparent via-indigo-500/10 to-transparent rotate-45 animate-[spin_4s_linear_infinite]"></div>
            </div>

            <!-- Header: MFD Top Bar -->
            <div class="p-4 bg-zinc-800/90 border-b-2 border-indigo-500/50 flex justify-between items-center relative z-30 shrink-0">
                <div class="flex items-center gap-3">
                    <div class="relative">
                        <div class="w-3 h-3 bg-indigo-500 rounded-full animate-pulse"></div>
                        <div class="absolute inset-0 bg-indigo-500 rounded-full animate-ping opacity-75"></div>
                    </div>
                    <div>
                        <h3 class="text-indigo-400 font-black tracking-[0.2em] text-xs uppercase">AI CO-PILOT</h3>
                        <div class="flex items-center space-x-2 text-[9px] text-indigo-300/70 font-bold">
                            <span>ALT: 35,000</span>
                            <span>•</span>
                            <span>SPD: M0.85</span>
                        </div>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button onclick="toggleChat()" class="text-indigo-400 hover:text-white transition-colors p-1 hover:bg-indigo-500/20 rounded">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                    </button>
                </div>
            </div>

            <!-- Messages Area -->
            <div class="flex-1 p-5 overflow-y-auto space-y-6 relative z-30 scrollbar-thin scrollbar-thumb-indigo-600/50 scrollbar-track-transparent" id="chat-messages">
                <!-- AI Message -->
                <div class="flex gap-4">
                    <div class="w-8 h-8 rounded-lg bg-indigo-600 flex items-center justify-center flex-shrink-0 shadow-lg shadow-indigo-500/30">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                    </div>
                    <div class="flex-1">
                        <div class="text-[10px] text-indigo-400 mb-1 uppercase tracking-wider font-bold">Co-Pilot // 10:42 AM</div>
                        <div class="bg-indigo-900/40 border border-indigo-500/30 rounded-tr-xl rounded-br-xl rounded-bl-xl p-3 text-xs text-indigo-100 leading-relaxed shadow-sm">
                            <p>Welcome aboard, Captain. Systems are online. How can I assist with your flight plan today?</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Input Area -->
            <div class="p-4 bg-zinc-800/90 border-t-2 border-indigo-500/50 relative z-30 shrink-0">
                <div class="relative flex items-center group/input">
                    <div class="absolute left-3 w-2 h-2 bg-indigo-500 rounded-full transition-all group-focus-within/input:bg-green-400"></div>
                    <input type="text" placeholder="ENTER COMMAND..." class="w-full bg-zinc-900/80 border border-indigo-500/30 text-indigo-100 text-xs py-3 pl-8 pr-12 rounded-lg focus:outline-none focus:border-indigo-400 focus:ring-1 focus:ring-indigo-400 focus:shadow-[0_0_20px_rgba(99,102,241,0.2)] transition-all placeholder-indigo-700 font-bold tracking-wider uppercase">
                    <button class="absolute right-2 p-2 text-indigo-500 hover:text-white transition-colors hover:bg-indigo-600 rounded-md">
                        <svg class="w-4 h-4 transform rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                    </button>
                </div>
            </div>

            <!-- Decorative Corners -->
            <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-indigo-500 z-40"></div>
            <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-indigo-500 z-40"></div>
            <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-indigo-500 z-40"></div>
            <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-indigo-500 z-40"></div>
        </div>

        <!-- Floating Button (Radar Scope) -->
        <button onclick="toggleChat()" class="group relative w-16 h-16 md:w-20 md:h-20 flex items-center justify-center focus:outline-none transition-transform hover:scale-105 active:scale-95">
            <!-- Radar Dish Background -->
            <div class="absolute inset-0 bg-zinc-900 rounded-full border-2 border-indigo-500 shadow-[0_0_30px_rgba(99,102,241,0.4)] overflow-hidden">
                <!-- Radar Sweep Animation -->
                <div class="absolute inset-0 bg-[conic-gradient(from_0deg,transparent_0deg,rgba(99,102,241,0.5)_360deg)] animate-[spin_2s_linear_infinite] opacity-50"></div>
                <!-- Grid Lines -->
                <div class="absolute inset-0 bg-[radial-gradient(circle,transparent_60%,rgba(99,102,241,0.3)_60%,rgba(99,102,241,0.3)_61%,transparent_61%)]"></div>
                <div class="absolute top-1/2 left-0 w-full h-[1px] bg-indigo-500/30"></div>
                <div class="absolute left-1/2 top-0 w-[1px] h-full bg-indigo-500/30"></div>
            </div>
            
            <!-- Plane Icon -->
            <div class="relative z-10 transform transition-transform duration-500 group-hover:-rotate-45 group-hover:translate-x-1 group-hover:-translate-y-1">
                <svg class="w-8 h-8 md:w-10 md:h-10 text-white drop-shadow-[0_0_10px_rgba(255,255,255,0.8)]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M21 16v-2l-8-5V3.5c0-.83-.67-1.5-1.5-1.5S10 2.67 10 3.5V9l-8 5v2l8-2.5V19l-2 1.5V22l3.5-1 3.5 1v-1.5L13 19v-5.5l8 2.5z"/>
                </svg>
            </div>

            <!-- Notification Dot -->
            <div class="absolute top-0 right-0 w-4 h-4 bg-red-500 rounded-full border-2 border-zinc-900 z-20 animate-bounce shadow-lg"></div>
        </button>
    </div>

    <style>
        .perspective-1000 {
            perspective: 1000px;
        }
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }
        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>

    <script>
        function toggleChat() {
            const chatWindow = document.getElementById('chat-window');
            if (chatWindow.classList.contains('hidden')) {
                chatWindow.classList.remove('hidden');
                // Small delay to allow display:block to apply before opacity transition
                setTimeout(() => {
                    chatWindow.classList.remove('scale-95', 'opacity-0');
                    chatWindow.classList.add('scale-100', 'opacity-100');
                }, 10);
            } else {
                chatWindow.classList.remove('scale-100', 'opacity-100');
                chatWindow.classList.add('scale-95', 'opacity-0');
                setTimeout(() => {
                    chatWindow.classList.add('hidden');
                }, 300);
            }
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
