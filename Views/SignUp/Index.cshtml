@{
    ViewData["Title"] = "Sign Up";
    Layout = "_Layout";
}

@section Scripts {
    <script>
        $("#registerForm").submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);

            $.ajax({
                url: '/SignUp',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.redirectUrl) {
                        window.location.href = response.redirectUrl;
                    } else {
                        $("#success").text("Register successfully !!!")
                    }
                },
                error: function (xhr) {
                    var errors = xhr.responseJSON;

                    $("#Confirmpassword-error").text("");
                    $("#Email-error").text("");
                    $("#Fullname-error").text("");
                    $("#Password-error").text("");

                    $.each(errors, function (key, messages) {
                        $("#" + key + "-error").text(messages.join(", "));
                    });
                }
            });
        });
    </script>
}

<div class="min-h-screen bg-zinc-100 flex items-center justify-center p-4 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-10 left-10 w-24 h-24 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>

    <!-- The Ticket Container -->
    <div class="w-full max-w-6xl relative group perspective-1000">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row relative transform transition-transform duration-500 hover:rotate-1 hover:scale-[1.01]">
            
            <!-- Left Side: The "Brand" (Visuals) -->
            <div class="md:w-1/3 bg-indigo-900 p-8 text-white relative overflow-hidden flex flex-col justify-between min-h-[400px]">
                <!-- Decorative Circles (Holes) -->
                <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>
                
                <div class="z-10 relative">
                    <div class="flex items-center space-x-2 mb-6">
                        <div class="w-8 h-8 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/></svg>
                        </div>
                        <span class="font-bold tracking-widest text-sm">TICKET_BOOKING</span>
                    </div>
                    <h1 class="text-4xl font-black tracking-tighter leading-none opacity-90">NEW<br>MEMBER<br>ACCESS</h1>
                </div>

                <div class="z-10 my-8 relative">
                    <div class="flex items-center justify-between mb-4">
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">JOIN</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Action</div>
                        </div>
                        <div class="flex-1 px-4 flex flex-col items-center justify-center opacity-50">
                            <svg class="w-6 h-6 transform rotate-90 mb-1" fill="currentColor" viewBox="0 0 24 24"><path d="M21,16v-2l-8-5V3.5c0-0.83-0.67-1.5-1.5-1.5S10,2.67,10,3.5V9l-8,5v2l8-2.5V19l-2,1.5V22l3.5-1l3.5,1v-1.5L13,19v-5.5L21,16z"/></svg>
                            <div class="w-full h-px bg-white/30 border-t border-dashed border-white/50"></div>
                        </div>
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">NOW</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Status</div>
                        </div>
                    </div>
                </div>

                <div class="z-10 relative">
                    <div class="flex justify-between items-end">
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Date</div>
                            <div class="text-lg font-bold">@DateTime.Now.ToString("dd MMM")</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Class</div>
                            <div class="text-lg font-bold">ECONOMY</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Seat</div>
                            <div class="text-lg font-bold">ANY</div>
                        </div>
                    </div>
                </div>

                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white/20 to-transparent"></div>
                <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-overlay filter blur-3xl opacity-50"></div>
            </div>

            <!-- Perforation Line (Visual only for desktop) -->
            <div class="hidden md:block absolute left-[33.333%] top-4 bottom-4 w-px border-l-2 border-dashed border-gray-300 z-20"></div>

            <!-- Right Side: The "Form" (Inputs) -->
            <div class="md:w-2/3 p-8 md:p-12 bg-white relative flex flex-col justify-center">
                <!-- Decorative Circle (Hole) -->
                <div class="hidden md:block absolute -left-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>

                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-900 uppercase tracking-wide flex items-center">
                        <span class="w-2 h-8 bg-indigo-600 mr-3 rounded-sm"></span>
                        Passenger Registration
                    </h2>
                    <p class="text-gray-400 text-xs uppercase tracking-widest mt-2 ml-5">Please fill in your details</p>
                </div>

                <form id="registerForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Full Name -->
                        <div class="relative group md:col-span-2">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">Full Name</label>
                            <input id="fullname" name="fullname" type="text" required 
                                   class="w-full border-b-2 border-gray-200 py-2 text-lg text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="YOUR FULL NAME">
                            <span id="Fullname-error" class="text-red-500 text-xs mt-1 block"></span>
                        </div>

                        <!-- Email -->
                        <div class="relative group">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">Email Address</label>
                            <input id="email" name="email" type="email" required 
                                   class="w-full border-b-2 border-gray-200 py-2 text-lg text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="NAME@EXAMPLE.COM">
                            <span id="Email-error" class="text-red-500 text-xs mt-1 block"></span>
                        </div>

                        <!-- Phone -->
                        <div class="relative group">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">Phone (Optional)</label>
                            <input id="phone" name="phone" type="tel" 
                                   class="w-full border-b-2 border-gray-200 py-2 text-lg text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="+1 234 567 890">
                        </div>
                        
                        <!-- Password -->
                        <div class="relative group">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">Password</label>
                            <input id="password" name="password" type="password" required 
                                   class="w-full border-b-2 border-gray-200 py-2 text-lg text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="••••••••">
                            <span id="Password-error" class="text-red-500 text-xs mt-1 block"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="relative group">
                            <label class="block text-[10px] uppercase text-gray-400 tracking-[0.2em] mb-2 group-focus-within:text-indigo-600 transition-colors">Confirm Password</label>
                            <input id="confirm-password" name="confirmpassword" type="password" required 
                                   class="w-full border-b-2 border-gray-200 py-2 text-lg text-gray-900 font-bold placeholder-gray-200 focus:outline-none focus:border-indigo-600 transition-all bg-transparent font-mono tracking-tight"
                                   placeholder="••••••••">
                            <span id="ConfirmPassword-error" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                    </div>

                    <!-- Barcode / Button Area -->
                    <div class="mt-8 flex flex-col sm:flex-row items-center justify-between gap-6 border-t border-gray-100 pt-8">
                        <div class="hidden sm:block opacity-40 hover:opacity-60 transition-opacity">
                            <!-- CSS Barcode -->
                            <div class="flex h-12 items-stretch space-x-[2px]">
                                <div class="w-1 bg-black"></div><div class="w-2 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-3 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-1 bg-black"></div><div class="w-4 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-2 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-3 bg-black"></div>
                            </div>
                            <div class="text-[10px] tracking-[0.5em] mt-1 text-center w-full">REGISTER</div>
                        </div>
                        
                        <div class="flex flex-col items-end w-full sm:w-auto">
                            <button type="submit" 
                                    class="w-full sm:w-auto bg-indigo-900 text-white px-10 py-4 rounded-xl font-bold uppercase tracking-widest hover:bg-indigo-800 transition-all transform hover:translate-x-1 hover:shadow-xl flex items-center justify-center space-x-2 group">
                                <span>Create Account</span>
                                <svg class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                            </button>
                            <span id="success" class="text-green-600 font-bold mt-2 text-sm"></span>
                        </div>
                    </div>
                </form>
                
                <div class="mt-6 text-center sm:text-right">
                    <p class="text-gray-400 text-xs uppercase tracking-widest">
                        Already a member? 
                        <a href="/Login" class="text-indigo-600 font-bold hover:text-indigo-800 ml-1">Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="absolute bottom-4 text-center w-full text-[10px] uppercase tracking-[0.3em] text-gray-400 opacity-50">
        Ticket Booking System &copy; @DateTime.Now.Year
    </div>
</div>

<style>
    @@keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    .perspective-1000 {
        perspective: 1000px;
    }
</style>
