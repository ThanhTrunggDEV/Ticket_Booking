@{
    ViewData["Title"] = "Verify OTP";
    Layout = "_Layout";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#otp-1').focus();

            $('.otp-input').on('input', function (e) {
                const input = $(this);
                const value = input.val();
                
                // Only allow numbers
                if (!/^\d*$/.test(value)) {
                    input.val('');
                    return;
                }

                if (value.length === 1) {
                    const nextInput = input.next('.otp-input');
                    if (nextInput.length) {
                        nextInput.focus();
                    }
                }

                checkOTPComplete();
            });

            $('.otp-input').on('keydown', function (e) {
                if (e.key === 'Backspace' && $(this).val() === '') {
                    const prevInput = $(this).prev('.otp-input');
                    if (prevInput.length) {
                        prevInput.focus();
                    }
                }
            });

            $('#otp-1').on('paste', function (e) {
                e.preventDefault();
                const pastedData = e.originalEvent.clipboardData.getData('text');
                const otpDigits = pastedData.replace(/\D/g, '').slice(0, 6);
                
                $('.otp-input').each(function (index) {
                    if (otpDigits[index]) {
                        $(this).val(otpDigits[index]);
                    }
                });

                const lastFilledIndex = Math.min(otpDigits.length - 1, 5);
                $(`#otp-${lastFilledIndex + 1}`).focus();
                
                checkOTPComplete();
            });

            function checkOTPComplete() {
                let otp = '';
                $('.otp-input').each(function () {
                    otp += $(this).val();
                });

                if (otp.length === 6) {
                    $('#verify-btn').prop('disabled', false).removeClass('opacity-50 cursor-not-allowed');
                } else {
                    $('#verify-btn').prop('disabled', true).addClass('opacity-50 cursor-not-allowed');
                }
            }

            // Form submission
            $('#otpForm').submit(function (e) {
                e.preventDefault();
                
                let otp = '';
                $('.otp-input').each(function () {
                    otp += $(this).val();
                });

                $('#verify-btn').html('<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>');
                $('#verify-btn').prop('disabled', true);

                $.ajax({
                    url: '/SignUp/VerifyOtp',
                    type: 'POST',
                    data: { otp: otp },
                    success: function (response) {
                        $('#success-message').removeClass('hidden').text('OTP verified successfully! Redirecting...');
                        $('#error-message').addClass('hidden');
                        
                        setTimeout(function () {
                            window.location.href = '/Login';
                        }, 1500);
                    },
                    error: function (xhr) {
                        $('#error-message').removeClass('hidden').text('Invalid OTP. Please try again.');
                        $('#success-message').addClass('hidden');
                        
                        // Reset button
                        $('#verify-btn').html('Verify OTP');
                        $('#verify-btn').prop('disabled', false).removeClass('opacity-50 cursor-not-allowed');
                        
                        // Clear inputs
                        $('.otp-input').val('');
                        $('#otp-1').focus();
                    }
                });
            });
        });
    </script>
}

<div class="min-h-screen bg-zinc-100 flex items-center justify-center p-4 font-mono relative overflow-hidden">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-10 left-10 w-24 h-24 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>

    <!-- The Ticket Container -->
    <div class="w-full max-w-4xl relative group perspective-1000">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row relative transform transition-transform duration-500 hover:rotate-1 hover:scale-[1.01]">
            
            <!-- Left Side: The "Brand" (Visuals) -->
            <div class="md:w-2/5 bg-indigo-900 p-8 text-white relative overflow-hidden flex flex-col justify-between min-h-[400px]">
                <!-- Decorative Circles (Holes) -->
                <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>
                
                <div class="z-10 relative">
                    <div class="flex items-center space-x-2 mb-6">
                        <div class="w-8 h-8 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                        </div>
                        <span class="font-bold tracking-widest text-sm">TICKET_BOOKING</span>
                    </div>
                    <h1 class="text-4xl font-black tracking-tighter leading-none opacity-90">SECURITY<br>CHECK<br>REQUIRED</h1>
                </div>

                <div class="z-10 my-8 relative">
                    <div class="flex items-center justify-between mb-4">
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">VERIFY</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Action</div>
                        </div>
                        <div class="flex-1 px-4 flex flex-col items-center justify-center opacity-50">
                            <svg class="w-6 h-6 transform rotate-90 mb-1" fill="currentColor" viewBox="0 0 24 24"><path d="M21,16v-2l-8-5V3.5c0-0.83-0.67-1.5-1.5-1.5S10,2.67,10,3.5V9l-8,5v2l8-2.5V19l-2,1.5V22l3.5-1l3.5,1v-1.5L13,19v-5.5L21,16z"/></svg>
                            <div class="w-full h-px bg-white/30 border-t border-dashed border-white/50"></div>
                        </div>
                        <div class="text-center">
                            <div class="text-5xl font-black tracking-tighter">PASS</div>
                            <div class="text-xs opacity-50 uppercase tracking-widest mt-1">Status</div>
                        </div>
                    </div>
                </div>

                <div class="z-10 relative">
                    <div class="flex justify-between items-end">
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Code</div>
                            <div class="text-lg font-bold">OTP</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Type</div>
                            <div class="text-lg font-bold">SECURE</div>
                        </div>
                        <div>
                            <div class="text-xs uppercase tracking-widest opacity-50 mb-1">Zone</div>
                            <div class="text-lg font-bold">S-01</div>
                        </div>
                    </div>
                </div>

                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white/20 to-transparent"></div>
                <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-overlay filter blur-3xl opacity-50"></div>
            </div>

            <!-- Perforation Line (Visual only for desktop) -->
            <div class="hidden md:block absolute left-[40%] top-4 bottom-4 w-px border-l-2 border-dashed border-gray-300 z-20"></div>

            <!-- Right Side: The "Form" (Inputs) -->
            <div class="md:w-3/5 p-8 md:p-12 bg-white relative flex flex-col justify-center">
                <!-- Decorative Circle (Hole) -->
                <div class="hidden md:block absolute -left-4 top-1/2 transform -translate-y-1/2 w-8 h-8 bg-zinc-100 rounded-full z-30 shadow-inner"></div>

                <div class="mb-10">
                    <h2 class="text-2xl font-bold text-gray-900 uppercase tracking-wide flex items-center">
                        <span class="w-2 h-8 bg-indigo-600 mr-3 rounded-sm"></span>
                        Identity Verification
                    </h2>
                    <p class="text-gray-400 text-xs uppercase tracking-widest mt-2 ml-5">Please enter the 6-digit code sent to your email</p>
                </div>

                <form id="otpForm" class="space-y-8">
                    <div class="flex justify-between gap-2 sm:gap-4">
                        @for (int i = 1; i <= 6; i++)
                        {
                            <input type="text" 
                                   id="otp-@i" 
                                   maxlength="1" 
                                   class="otp-input w-10 h-14 sm:w-14 sm:h-16 text-center text-2xl font-bold border-2 border-gray-200 rounded-lg focus:border-indigo-600 focus:outline-none transition-colors bg-gray-50 font-mono"
                                   autocomplete="off">
                        }
                    </div>

                    <!-- Messages -->
                    <div id="error-message" class="hidden p-4 bg-red-50 border border-red-100 text-red-600 text-sm rounded-lg text-center font-bold"></div>
                    <div id="success-message" class="hidden p-4 bg-green-50 border border-green-100 text-green-600 text-sm rounded-lg text-center font-bold"></div>

                    <!-- Barcode / Button Area -->
                    <div class="mt-8 flex flex-col sm:flex-row items-center justify-between gap-6 border-t border-gray-100 pt-8">
                        <div class="hidden sm:block opacity-40 hover:opacity-60 transition-opacity">
                            <!-- CSS Barcode -->
                            <div class="flex h-12 items-stretch space-x-[2px]">
                                <div class="w-1 bg-black"></div><div class="w-2 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-3 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-1 bg-black"></div><div class="w-4 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-2 bg-black"></div><div class="w-1 bg-transparent"></div><div class="w-3 bg-black"></div>
                            </div>
                            <div class="text-[10px] tracking-[0.5em] mt-1 text-center w-full">VERIFIED</div>
                        </div>
                        
                        <button type="submit" 
                                id="verify-btn"
                                disabled
                                class="w-full sm:w-auto bg-indigo-900 text-white px-10 py-4 rounded-xl font-bold uppercase tracking-widest hover:bg-indigo-800 transition-all transform hover:translate-x-1 hover:shadow-xl flex items-center justify-center space-x-2 group opacity-50 cursor-not-allowed">
                            <span>Confirm Identity</span>
                            <svg class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        </button>
                    </div>
                </form>
                
                <div class="mt-6 text-center sm:text-right">
                    <p class="text-gray-400 text-xs uppercase tracking-widest">
                        Didn't receive code? 
                        <a href="#" class="text-indigo-600 font-bold hover:text-indigo-800 ml-1">Resend</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="absolute bottom-4 text-center w-full text-[10px] uppercase tracking-[0.3em] text-gray-400 opacity-50">
        Ticket Booking System &copy; @DateTime.Now.Year
    </div>
</div>

<style>
    @@keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    .perspective-1000 {
        perspective: 1000px;
    }
</style>
